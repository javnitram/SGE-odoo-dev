<odoo>
  <data>
     

    <record model="ir.ui.view" id="reclutamiento.list">
      <field name="name">reclutamiento list</field>
      <field name="model">ac.reclutamiento.ejercito</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="unidades"/>
          <field name="campanas"  />
        </tree>
      </field>
    </record>

 

    <record model="ir.actions.act_window" id="reclutamiento.action_window">
      <field name="name">reclutamiento ejercito</field>
      <field name="res_model">ac.reclutamiento.ejercito</field>
      <field name="view_mode">tree,form</field>
    </record>


     
            <record model="ir.ui.view" id="reclutamiento.infanteria_cac_list">
              <field name="name">reclutamiento infanteria cac</field>
              <field name="model">ac.reclutamiento.infanteria.cac</field>
              <field name="arch" type="xml">
                <tree>
                  <field name="nombre"/>
                  <field name="descripcion"/>
                  <field name="armadura"/>
                </tree>
              </field>
            </record>
        



    <record model="ir.actions.act_window" id="reclutamiento.infanteria_action_window">
      <field name="name">Tropas cuerpo a cuerpo </field>
      <field name="res_model">ac.reclutamiento.infanteria.cac</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.ui.view" id="reclutamiento.general_list">
      <field name="name">reclutamiento general</field>
      <field name="model">ac.reclutamiento.general</field>
      <field name="arch" type="xml">
      
        <form >
         <group colspan="4" >
          <field name="imagen" widget="image" class="oe_avatar_oe_left" options="{'size':[50,50]}"/>
          <field name="name"/>
     
          <field name="edad"/>
          <field name="ejercitos_gestionados"/>
         </group>
         
       
        </form>
      </field>
    </record>




<record model="ir.actions.act_window" id="reclutamiento.general_action_window">
<field name="name">General Svpremvs </field>
<field name="res_model">ac.reclutamiento.general</field>
<field name="view_mode">tree,form</field>
</record>




<record model="ir.ui.view" id="reclutamiento.infanteria_proyectiles_list">
  <field name="name">reclutamiento tropas con proyectiles</field>
  <field name="model">ac.reclutamiento.infanteria.proyectiles</field>
  <field name="arch" type="xml">
    
    <tree>
      <field name="nombre"/>
      <field name="descripcion"/>
      <field name="municion"/>
      <field name="alcance" />
    </tree>
  </field>
</record>




<record model="ir.actions.act_window" id="reclutamiento.infanteria_proyectiles_window">
<field name="name">Infanteria de proyectiles </field>
<field name="res_model">ac.reclutamiento.infanteria.proyectiles</field>
<field name="view_mode">tree,form</field>
</record>



<record model="ir.ui.view" id="reclutamiento.unidades_montadas_list">
  <field name="name">reclutamiento tropas montadas</field>
  <field name="model">ac.reclutamiento.unidades.montadas</field>
  <field name="arch" type="xml">
    <tree>
      <field name="nombre"/>
      <field name="descripcion"/>
      <field name="monturas"/>
      <field name="velocidad"/>
    </tree>
  </field>
</record>




<record model="ir.actions.act_window" id="reclutamiento.unidades_montadas_window">
<field name="name">Infanteria montada </field>
<field name="res_model">ac.reclutamiento.unidades.montadas</field>
<field name="view_mode">tree,form</field>
</record>







<record model="ir.ui.view" id="reclutamiento.campana_list">
  <field name="name">Hora de la guerrra!, Inserte sus datos</field>
  <field name="model">ac.reclutamiento.campana</field>
  <field name="arch" type="xml">   
    <tree>
      <field name="nombre"/>
      <field name="pais_id"/>
      <field name="fecha_inicio"/>
      <field name="ejercitos"/>
    </tree>
  </field>
</record>




<record model="ir.actions.act_window" id="reclutamiento.campana_window">
<field name="name">Campañas </field>
<field name="res_model">ac.reclutamiento.campana</field>
<field name="view_mode">tree,form</field>
</record>



<record model="ir.ui.view" id="reclutamiento.artilleria_list">
  <field name="name">reclutamiento artilleria</field>
  <field name="model">ac.reclutamiento.artilleria</field>
  <field name="arch" type="xml">
    <tree>
      <field name="nombre"/>
      <field name="descripcion"/>
      <field name="municion"/>
      <field name="alcance"/>
    </tree>
  </field>
</record>




<record model="ir.actions.act_window" id="reclutamiento.artilleria_window">
<field name="name">Artilleria </field>
<field name="res_model">ac.reclutamiento.artilleria</field>
<field name="view_mode">tree,form</field>
</record>











    <menuitem name="Reclutamiento" id="reclutamiento.menu_root"/>



    <menuitem name="Ejercito" id="reclutamiento.menu_general" parent="reclutamiento.menu_root"/>
    <menuitem name="Tropas" id="reclutamiento.tropas" parent="reclutamiento.menu_root"/>
    


    <menuitem name="Ejercito" id="reclutamiento.ejercito_list" parent="reclutamiento.menu_general"
              action="reclutamiento.action_window"/>

    <menuitem name="General" id="reclutamiento.general_list" parent="reclutamiento.menu_general"
              action="reclutamiento.general_action_window"/> 

    <menuitem name="Infanteria Cuerpo a cuerpo" id="reclutamiento.infanteria_cac_list" parent="reclutamiento.tropas"
              action="reclutamiento.infanteria_action_window"/>   
              
    <menuitem name="Infanteria de proyectiles" id="reclutamiento.infanteria_proyectiles_list" parent="reclutamiento.tropas"
              action="reclutamiento.infanteria_proyectiles_window"/> 
              
    <menuitem name="Campaña" id="reclutamiento.campana_list" parent="reclutamiento.menu_general"
              action="reclutamiento.campana_window"/>  

    <menuitem name="Unidades Montadas" id="reclutamiento.unidades_montadas_list" parent="reclutamiento.tropas"
              action="reclutamiento.unidades_montadas_window"/>    


    <menuitem name="Artilleria" id="reclutamiento.artilleria_list" parent="reclutamiento.tropas"
              action="reclutamiento.artilleria_window"/>    



  </data>
</odoo>