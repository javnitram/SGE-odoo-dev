    <!-- Top menu item -->

    <menuitem name="Reclutamiento" id="reclutamiento.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Ejercito" id="reclutamiento.menu_1" parent="reclutamiento.menu_root"/>
    <menuitem name="infanteria_cac" id="reclutamiento.menu_2" parent="reclutamiento.menu_root"/>

    <!-- actions -->

    <menuitem name="ejercito" id="reclutamiento.menu_1_list" parent="reclutamiento.menu_1"
              action="reclutamiento.action_window"/>


    <menuitem name="infanteriacac" id="reclutamiento.menu_2_list" parent="reclutamiento.menu_2"
