<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="inmobiliaria.inmueble_list">
      <field name="name">Lista de inmuebles</field>
      <field name="model">il.inmobiliaria.inmueble</field>
      <field name="arch" type="xml">
        <tree>
          <field name="referencia"/>
          <field name="nombre"/>
          <field name="tipo"/>
          <field name="fecha_entrada"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="inmobiliaria.inmueble_action_window">
      <field name="name">Inmueble window</field>
      <field name="res_model">il.inmobiliaria.inmueble</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->
    <!--               -->

    <menuitem name="Inmobiliaria" id="inmobiliaria.menu_root"/>

    <!-- menu categories -->
    <!--                 -->

    <menuitem name="Inmueble" id="inmobiliaria.inmueble" parent="inmobiliaria.menu_root"/>
    <!--<menuitem name="Venta" id="il.inmobiliaria.menu_2" parent="il.inmobiliaria.menu_root"/> -->

    <!-- actions -->
    <!--         -->
    <menuitem name="Listar inmuebles" id="inmobiliaria.menu_1_list" parent="inmobiliaria.inmueble"
              action="inmobiliaria.inmueble_action_window"/>

  </data>
</odoo>