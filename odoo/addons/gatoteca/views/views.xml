<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="gatoteca.empleado">
      <field name="name">Empleado</field>
      <field name="model">gatoteca.empleado</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="sueldo"/>
          <field name="encargado" />
          <field name="puesto" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca.menu">
      <field name="name">Menu</field>
      <field name="model">gatoteca.menu</field>
      <field name="arch" type="xml">
        <tree>
          <field name="tipo" />
          <field name="precio" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca.cliente">
      <field name="name">Cliente</field>
      <field name="model">gatoteca.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="email" />
          <field name="adopcion" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca.gato">
      <field name="name">Gato</field>
      <field name="model">gatoteca.gato</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="raza" />
          <field name="adopcion" />
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gatoteca.empleado_action_window">
      <field name="name">Empleados</field>
      <field name="res_model">gatoteca.empleado</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gatoteca.menu_action_window">
      <field name="name">Menu</field>
      <field name="res_model">gatoteca.menu</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gatoteca.cliente_action_window">
      <field name="name">Cliente</field>
      <field name="res_model">gatoteca.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gatoteca.gato_action_window">
      <field name="name">Gato</field>
      <field name="res_model">gatoteca.gato</field>
      <field name="view_mode">tree,form</field>
    </record>

