<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="gatoteca_empleado">
      <field name="name">Empleado</field>
      <field name="model">ss.gatoteca.empleado</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="sueldo"/>
          <field name="encargado" />
          <field name="puesto" />
          <field name="gatos_ids" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_empleado_form">
      <field name="name">Empleado</field>
      <field name="model">ss.gatoteca.empleado</field>
      <field name="arch" type="xml">
        <form>
          <group name="name" string="Datos">
            <field name="name"/>
            <field name="sueldo"/>
            <field name="puesto" />
            <field name="encargado" />
            <field name="gatos_ids" />
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_cliente">
      <field name="name">Cliente</field>
      <field name="model">ss.gatoteca.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="email" />
          <field name="adopcion" />
          <field name="gatos_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_cliente_form">
      <field name="name">Cliente</field>
      <field name="model">ss.gatoteca.cliente</field>
      <field name="arch" type="xml">
        <form>
          <group name="name" string="Datos">
            <field name="name"/>
            <field name="email"/>
            <field name="adopcion"/>
          </group>
          <group name="name2" string="Gatos adoptados">
            <field name="gatos_ids"/>
          </group>
        </form>
      </field>
    </record>

    <record id="gatoteca_gato_view_kanban" model="ir.ui.view">
      <field name="name">gatoteca.gato.view.kanban</field>
      <field name="model">ss.gatoteca.gato</field>
      <field name="arch" type="xml">
        <kanban>
        <field name="id" />
          <field name="name"/>
          <field name="empleados_ids"/>
          <field name="cliente_id"/>
          <field name="raza_id"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click">
                <div class="o_kanban_image">
                  <img t-att-src="kanban_image('gatoteca.gato','imagen',record.id.raw_value)"/>
                </div>
                <div class="oe_kanban_details">
                  <ul>
                    <li>Nombre: <field name="name"/> </li>
                    <li>Raza: <field name="raza_id"/> </li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_gato">
      <field name="name">Gato</field>
      <field name="model">ss.gatoteca.gato</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="imagen"/>
          <field name="empleados_ids"/>
          <field name="cliente_id"/>
          <field name="raza_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_gato_form">
      <field name="name">Gato</field>
      <field name="model">ss.gatoteca.gato</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="imagen" widget="image"/>
          </group>
          <group name="name" string="Datos">
            <field name="name"/>
            <field name="empleados_ids"/>
            <field name="raza_id"/>
            <field name="cliente_id"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_raza">
      <field name="name">Raza</field>
      <field name="model">ss.gatoteca.raza</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="gatos_ids"/>
          <field name="procedencia" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gatoteca_raza_form">
      <field name="name">Raza</field>
      <field name="model">ss.gatoteca.raza</field>
      <field name="arch" type="xml">
        <form>
          <group name="name" string="Datos">
            <field name="name"/>
            <field name="procedencia" />
          </group>
          <group name="name2" string="Gatos registrados">
            <field name="gatos_ids"/>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gatoteca.empleado_action_window">
      <field name="name">Empleados</field>
      <field name="res_model">ss.gatoteca.empleado</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gatoteca.cliente_action_window">
      <field name="name">Cliente</field>
      <field name="res_model">ss.gatoteca.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gatoteca.gato_action_window">
      <field name="name">Gato</field>
      <field name="res_model">ss.gatoteca.gato</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gatoteca.raza_action_window">
      <field name="name">Raza</field>
      <field name="res_model">ss.gatoteca.raza</field>
      <field name="view_mode">tree,form</field>
    </record>

