    <!-- Top menu item -->

    <menuitem name="Gatoteca" id="gatoteca.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Empleados" id="gatoteca.empleado_menu" parent="gatoteca.menu_root"
      action="gatoteca.empleado_action_window"/>
    <menuitem name="Menus" id="gatoteca.menu_menu" parent="gatoteca.menu_root"
      action="gatoteca.menu_action_window"/>
    <menuitem name="Clientes" id="gatoteca.cliente_menu" parent="gatoteca.menu_root"
      action="gatoteca.cliente_action_window"/>
    <menuitem name="Gatos" id="gatoteca.gato_menu" parent="gatoteca.menu_root"
