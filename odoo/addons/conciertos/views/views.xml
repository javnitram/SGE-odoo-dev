<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="conciertos.concierto_list">
      <field name="name">Lista de conciertos</field>
      <field name="model">sa.conciertos.concierto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha"/>
          <field name="artista_id"/>
          <field name="recinto_id"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="conciertos.concierto_action_window">
      <field name="name">Concierto window</field>
      <field name="res_model">sa.conciertos.concierto</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Conciertos" id="conciertos.menu_root"/> <!-- Al no especificar elemento padre, se convierte en el elemento Top -->

    <!-- menu categories -->

    <menuitem name="Lista de conciertos" id="conciertos.concierto" parent="conciertos.menu_root"/>
    <menuitem name="Artistas" id="conciertos.artistas" parent="conciertos.menu_root"/>
    <menuitem name="Recintos" id="conciertos.recintos" parent="conciertos.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="conciertos_menu_1_list" parent="conciertos.concierto"
              action="conciertos.concierto_action_window"/>

  </data>
</odoo>