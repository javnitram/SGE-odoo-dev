<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="conciertos.concierto_list">
      <field name="name">conciertos.concierto.list</field>
      <field name="model">sa.conciertos.concierto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha" />
          <field name="artistas_ids" />
          <field name="recinto_id" />
          <field name="precio_base" />
          <field name="dinero_recaudado" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.artista_list">
      <field name="name">conciertos.artista.list</field>
      <field name="model">sa.conciertos.artista</field>
      <field name="arch" type="xml">
        <tree>
          <field name="foto" widget="image" width="100" />
          <field name="name" />
          <field name="conciertos_ids" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.recinto_list">
      <field name="name">conciertos.recinto.list</field>
      <field name="model">sa.conciertos.recinto</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="ciudad" />
          <field name="pais_id" />
          <field name="capacidad" />
          <field name="conciertos_ids" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.entrada_list">
      <field name="name">conciertos.entrada.list</field>
      <field name="model">sa.conciertos.entrada</field>
      <field name="arch" type="xml">
        <tree>
          <field name="concierto_id" />
          <field name="cliente_id" />
          <field name="zona" />
          <field name="precio" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.cliente_list">
      <field name="name">conciertos.cliente.list</field>
      <field name="model">sa.conciertos.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="email" />
        </tree>
      </field>
    </record>

    <!-- form views definition -->

    <record model="ir.ui.view" id="conciertos.concierto_form">
      <field name="name">conciertos.concierto.form</field>
      <field name="model">sa.conciertos.concierto</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name" />
              <field name="fecha" />
              <field name="artistas_ids" />
              <field name="recinto_id" />
              <field name="precio_base" />
              <field name="dinero_recaudado" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.artista_form" >
      <field name="name">conciertos.artista.form</field>
      <field name="model">sa.conciertos.artista</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="foto" widget="image" />
              <field name="name" />
              <field name="conciertos_ids" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.recinto_form">
      <field name="name">conciertos.recinto.form</field>
      <field name="model">sa.conciertos.recinto</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name" />
              <field name="ciudad" />
              <field name="pais_id" />
              <field name="capacidad" />
              <field name="conciertos_ids" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.entrada_form">
      <field name="name">conciertos.entrada.form</field>
      <field name="model">sa.conciertos.entrada</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="concierto_id" />
              <field name="cliente_id" />
              <field name="zona" />
              <field name="precio" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="conciertos.cliente_form">
      <field name="name">conciertos.cliente.form</field>
      <field name="model">sa.conciertos.cliente</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name" />
              <field name="email" />
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="conciertos.concierto_action_window">
      <field name="name">Lista de conciertos</field>
      <field name="res_model">sa.conciertos.concierto</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="conciertos.artista_action_window">
      <field name="name">Lista de artistas</field>
      <field name="res_model">sa.conciertos.artista</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="conciertos.recinto_action_window">
      <field name="name">Lista de recintos</field>
      <field name="res_model">sa.conciertos.recinto</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="conciertos.entrada_action_window">
      <field name="name">Entradas vendidas</field>
      <field name="res_model">sa.conciertos.entrada</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="conciertos.cliente_action_window">
      <field name="name">Clientes</field>
      <field name="res_model">sa.conciertos.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Conciertos" id="conciertos.menu_root" />

    <!-- menu categories -->

    <menuitem name="Conciertos" id="conciertos.menu_conciertos" parent="conciertos.menu_root" />
    <menuitem name="Artistas" id="conciertos.menu_artistas" parent="conciertos.menu_root" />
    <menuitem name="Recintos" id="conciertos.menu_recintos" parent="conciertos.menu_root" />
    <menuitem name="Venta de entradas" id="conciertos.menu_entradas" parent="conciertos.menu_root" />

    <!-- actions -->

    <menuitem name="Conciertos" id="conciertos.menu_conciertos_list" parent="conciertos.menu_conciertos"
      action="conciertos.concierto_action_window" />

    <menuitem name="Artistas" id="conciertos.menu_artistas_list" parent="conciertos.menu_artistas"
      action="conciertos.artista_action_window" />

    <menuitem name="Recintos" id="conciertos.menu_recintos_list" parent="conciertos.menu_recintos"
      action="conciertos.recinto_action_window" />
    
    <menuitem name="Entradas vendidas" id="conciertos.menu_entradas_list" parent="conciertos.menu_entradas"
      action="conciertos.entrada_action_window" />
    
    <menuitem name="Clientes" id="conciertos.menu_clientes_list" parent="conciertos.menu_entradas"
      action="conciertos.cliente_action_window" />
    
  </data>
</odoo>