<odoo>
  <data>
    <record id="repairments_action" model="ir.actions.act_window">
      <field name="name">Repairments</field>
      <field name="res_model">ws.repairments</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <record id="repairments_tree_view" model="ir.ui.view">
      <field name="name">computer_repairment.tree</field>
      <field name="model">ws.repairments</field>
      <field name="arch" type="xml">
        <tree>
          <field name="repair_status" string="Repairment status"/>
          <field name="start_date" string="Start date"/>
          <field name="completion_date" string="Finish date"/>
        </tree>
      </field>
    </record>

    <record id="technicians_action" model="ir.actions.act_window">
      <field name="name">Technicians</field>
      <field name="res_model">ws.technicians</field>
      <field name="view_mode">form,kanban</field>
    </record>

