<odoo>
    <data>
        <record id="repairments_action" model="ir.actions.act_window">
            <field name="name">Repairments</field>
            <field name="res_model">ws.repairments</field>
            <field name="view_mode">tree,form,kanban</field>
            </record>

        <record id="repairments_view_tree" model="ir.ui.view">
        <field name="name">repairment_view_tree</field>
        <field name="model">ws.repairments</field>
        <field name="arch" type="xml">
            <tree>
            <field name="repair_status" string="Repairment status"/>
            <field name="start_date" string="Start date"/>
            <field name="completion_date" string="Finish date"/>
            </tree>
        </field>
        </record>

        <record id="repairments_view_form" model="ir.ui.view">
        <field name="name">repairment_view_form</field>
        <field name="model">ws.repairments</field>
        <field name="arch" type="xml">
            <form>
            <group>
                <field name="repair_status" string="Repairment status"/>
                <field name="start_date" string="Start date"/>
                <field name="completion_date" string="Completion date"/>
                <field name="labor_cost" string="Labor cost"/>
            </group>
            </form>
        </field>
        </record>
    </data>
</odoo>