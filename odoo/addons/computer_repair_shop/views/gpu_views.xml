<odoo>
    <data>
    
    <record id="gpu_action" model="ir.actions.act_window">
        <field name="name">GPU</field>
        <field name="res_model">ws.gpu</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="gpu_view_kanban" model="ir.ui.view">
        <field name="name">gpu_view_kanban</field>
        <field name="model">ws.gpu</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="photo"/>
                <field name="name"/>
                <field name="die"/>
                <field name="vram"/>
                <field name="number_of_cores"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('ws.gpu', 'photo', record.id.raw_value, placeholder)}'"/>
                            <div class="oe_kanban_details">
                              <ul>
                                  <li>
                                      <h3 style="text-align: center;"><field name="name"/></h3>
                                      <h5 style="text-align: center;"><field name="die"/></h5>
                                      <h5 style="text-align: center;"><field name="vram"/> GB</h5>
                                      <h5 style="text-align: center;"><field name="number_of_cores"/> cores</h5>
                                  </li>
                              </ul>
                          </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="gpu_view_form" model="ir.ui.view">
        <field name="name">gpu_view_form</field>
        <field name="model">ws.gpu</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="photo" class="oe_avatar" widget="image" string="Photo"/>
                        <field name="name" string="Name" required="1"/>
                        <field name="die" string="Die" required="1"/>
                        <field name="vram" string="VRAM (In GB)" required="1"/>
                        <field name="number_of_cores" string="Number of cores" required="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    </data>
</odoo>