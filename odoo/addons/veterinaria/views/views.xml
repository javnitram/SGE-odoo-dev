<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cm.veterinaria.mascotas.list">
      <field name="name">veterinaria list</field>
      <field name="model">cm.veterinaria.mascotas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="veterinaria.mascotas.action_window">
      <field name="name">veterinaria window</field>
      <field name="res_model">cm.veterinaria.mascotas</field>
      <field name="view_mode">tree,form</field>
    </record>


