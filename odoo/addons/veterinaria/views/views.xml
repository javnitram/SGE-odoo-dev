    <menuitem name="Menu 1" id="veterinaria.menu_1" parent="veterinaria.menu_root"/>
    <menuitem name="Menu 2" id="veterinaria.menu_2" parent="veterinaria.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="veterinaria.menu_1_list" parent="veterinaria.menu_1"
