<odoo>
    <data>
        <!-- VISTA DOCTORES -->
    <record model="ir.ui.view" id="hospital_doctores_tree">
      <field name="name">DOCTORES</field>
      <field name="model">gs.hospital.doctores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="imagen" widget="image" options="{'size': [150, 150]}"/>
          <field name="dni"/>
          <field name="name"/>
          <field name="surname"/>
          <field name="date"/>
          <field name="tlf"/>
          <field name="especialidad"/>
          <field name="pacientes_ids">
            <tree>
              <field name="name"/>
              <field name="surname"/>
              <field name="sexo"/>
              <field name="date"/>
              <field name="history"/>
            </tree>
          </field> 
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_doctores_form">
      <field name="name">DOCTORES</field>
      <field name="model">gs.hospital.doctores</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="4" col="2">
            <field name="imagen" widget="image" options="{'size': [150, 200]}"/>
            <field name="dni"/>
            <field name="name"/>
            <field name="surname"/>
            <field name="date"/>
            <field name="tlf"/>
            <field name="especialidad"/>
            <field name="pacientes_ids">
              <tree>
                <field name="name"/>
                <field name="surname"/>
                <field name="sexo"/>
                <field name="date"/>
                <field name="history"/>
              </tree>
            </field>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_doctores_kanban">
      <field name="name">hospital.doctores.kanban</field>
      <field name="model">gs.hospital.doctores</field>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
      <kanban>            
            <field name="dni"/>
            <field name="name"/>                       
            <field name="surname"/>
            <field name="date"/>
            <field name="tlf"/>
            <field name="especialidad"/>
            <field name="imagen"/>
            <templates>
              <t t-name="kanban-box">             
                <div t-attf-class="oe_kanban_global_click">                  
                  <div class="o_kanban_image">             
                    <t t-if="record.imagen.raw_value">       
                      <img t-att-src="kanban_image('gs.hospital.doctores','imagen',record.imagen.id_value)"/>                    
                    </t>
                  </div>                  
                  <div class="oe_kanban_details">
                    <ul>                      
                      <li>Nombre: <field name="name"/></li>  
                      <li>Surname: <field name="surname"/></li>  
                      <li>especialidad: <field name="especialidad"/></li>                                                                            
                    </ul>
                  </div>
                </div>
              </t>
            </templates>        
      </kanban>
      </field>
    </record>

     <!-- ACTIONS -->
    <record model="ir.actions.act_window" id="hospital_doctores_action_window">
      <field name="name">DOCTORES</field>
      <field name="res_model">gs.hospital.doctores</field>
      <field name="view_mode">kanban,form,tree</field>
    </record>
    </data>
</odoo>