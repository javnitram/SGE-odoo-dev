<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="hospital_doctores_tree">
      <field name="name">DOCTORES</field>
      <field name="model">gs.hospital.doctores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="dni"/>
          <field name="name"/>
          <field name="surname"/>
          <field name="date"/>
          <field name="tlf"/>
          <field name="especialidad"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_pacientes_tree">
      <field name="name">PACIENTES</field>
      <field name="model">gs.hospital.pacientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="dni"/>
          <field name="name"/>
          <field name="surname"/>
          <field name="sexo"/>
          <field name="date"/>
          <field name="tlf"/>
          <field name="history"/>
          <field name="alergias"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_enfermeros_form">
      <field name="name">ENFERMEROS</field>
      <field name="model">gs.hospital.enfermeros</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="dni"/>
            <field name="name"/>
            <field name="surname"/>
            <field name="date"/>
            <field name="tlf"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_medicinas_form">
      <field name="name">MEDICINAS</field>
      <field name="model">gs.hospital.medicinas</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="4" col="2">
            <field name="nroserie"/>
            <field name="name"/>
            <field name="cantidad"/>
            <field name="tipo"/>    
            <field name="imagen" widget="image" options="{'size': [150, 150]}"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_medicinas_search_view">
      <field name="name">hospital.medicinas.search</field>
      <field name="model">gs.hospital.medicinas</field>
      <field name="arch" type="xml">
        <search>
            <field name="nroserie" string="NÃºmero de serie"/>
            <field name="name" string="Nombre de medicamento"/>
            <field name="tipo" string="Tipo de medicamento"/>    
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_medicinas_kanban">
      <field name="name">hospital.medicinas.kanban</field>
      <field name="model">gs.hospital.medicinas</field>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
      <kanban>
            <field name="nroserie"/>
            <field name="name"/>
            <field name="tipo"/>
            <field name="cantidad"/>
            <templates>
              <t t-name="kanban-box">             
                <div t-attf-class="oe_kanban_global_click">
                  <div class="o_kanban_image">
                    <img t-att-src="kanban_image('gs.hospital.medicinas','imagen',record.id.raw_value)"/>
                  </div>
                  <div class="oe_kanban_details">
                    <ul>
                      <li>Nombre: <field name="name"/></li>
                      <li>Tipo: <field name="tipo"/></li>
                    </ul>
                  </div>
                </div>
              </t>
            </templates>        
      </kanban>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="hospital_doctores_action_window">
      <field name="name">DOCTORES</field>
      <field name="res_model">gs.hospital.doctores</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="hospital_pacientes_action_window">
      <field name="name">PACIENTES</field>
      <field name="res_model">gs.hospital.pacientes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="hospital_enfermeros_action_window">
      <field name="name">ENFERMEROS</field>
      <field name="res_model">gs.hospital.enfermeros</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="hospital_medicinas_action_window">
      <field name="name">MEDICINAS</field>
      <field name="res_model">gs.hospital.medicinas</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Hospital" id="hospital_menu_root"/>

    <!-- menu categories -->
    <!-- actions -->
    <menuitem name="Doctores" 
      id="hospital_doctores_menu" 
      parent="hospital_menu_root"
      action="hospital_doctores_action_window"/>

    <menuitem name="Pacientes" 
      id="hospital_pacientes_menu" 
      parent="hospital_menu_root"
      action="hospital_pacientes_action_window"/>

    <menuitem name="Enfermeros" 
      id="hospital_enfermeros_menu" 
      parent="hospital_menu_root"
      action="hospital_enfermeros_action_window"/>

    <menuitem name="Medicinas" 
      id="hospital_medicinas_menu" 
      parent="hospital_menu_root"
      action="hospital_medicinas_action_window"/>
  </data>
</odoo>