<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="hospital_doctores_tree">
      <field name="name">DOCTORES</field>
      <field name="model">hospital.doctores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="surname"/>
          <field name="date"/>
          <field name="specialty"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hospital_pacientes_tree">
      <field name="name">PACIENTES</field>
      <field name="model">hospital.pacientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="surname"/>
          <field name="date"/>
          <field name="history"/>
          <field name="alergias"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="hospital_doctores_action_window">
      <field name="name">DOCTORES</field>
      <field name="res_model">hospital.doctores</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="hospital_pacientes_action_window">
      <field name="name">PACIENTES</field>
      <field name="res_model">hospital.pacientes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Hospital" id="hospital_menu_root"/>

    <!-- menu categories -->
    <!-- actions -->
    <menuitem name="Doctores" 
      id="hospital_doctores_menu" 
      parent="hospital_menu_root"
      action="hospital_doctores_action_window"/>

    <menuitem name="Pacientes" 
      id="hospital_pacientes_menu" 
      parent="hospital_menu_root"
      action="hospital_pacientes_action_window"/>
  </data>
</odoo>