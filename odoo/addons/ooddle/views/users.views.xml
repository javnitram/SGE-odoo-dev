<odoo>
  <data>
    <record id="ooddle.user_form" model="ir.ui.view">
        <field name="name">dm.ooddle.users.form</field>
        <field name="model">dm.ooddle.users</field>
        <field name="arch" type="xml">
            <form string="User Form">
            <group colspan="2" col="2">
              <field name="image" widget="image" class="oe_avatar"/>
              <field name="name"/>
              <field name="league"/>
              <field name="points"/>
              <field name="mobile" widget="phone"/>
              <field name="mail" widget="email"/>
            </group>
            </form>
        </field>
    </record>
  
     <record id="ooddle.user_tree" model="ir.ui.view">
        <field name="name">dm.ooddle.users.tree</field>
        <field name="model">dm.ooddle.users</field>
        <field name="arch" type="xml">
            <tree string="Users">
              <field name="name" avatar_field="image"/>
              <field name="league"/>
              <field name="points"/>
              <field name="mobile" widget="phone"/>
              <field name="mail" widget="email"/>
            </tree>
        </field>
    </record>

  <record id="ooddle.users_kanban" model="ir.ui.view">
    <field name="name">dm.ooddle.users.kanban</field>
    <field name="model">dm.ooddle.users</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
              <t t-name="kanban-box">
              <div class="oe_kanban_vignette oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban"  
              style="box-shadow: 7px 10px 5px 0px rgba(0,0,0,0.75); border: 1px solid black;">
              <field name="image" widget="image" width="100" height = "100"/>
              <!-- Left side image: -->
              <div class="oe_kanban_details" style= "padding-left: 10px; ">
                <!-- Title and data -->
                <h4><field name="name"/></h4>
                <br>League: <field name="league"/></br>
                <ul>
                  <li>Points: <field name="points"/></li>
                  <li>E-mail: <field name="mail"/></li>
                </ul>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  </data>
</odoo>