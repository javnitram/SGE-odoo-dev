<odoo>
  <data>
  <!--User form view -->
    <record id="ooddle.user_form" model="ir.ui.view">
        <field name="name">dm.ooddle.users.form</field>
        <field name="model">dm.ooddle.users</field>
        <field name="arch" type="xml">
            <form string="User Form">
            <group colspan="2" col="2">
              <field name="name"/>
              <field name="league"/>
              <field name="points"/>
            </group>
            </form>
        </field>
    </record>
    <!--User tree view
     <record id="ooddle.user_tree" model="ir.ui.view">
        <field name="name">dm.ooddle.users.tree</field>
        <field name="model">dm.ooddle.users</field>
        <field name="arch" type="xml">
            <tree string="Users">
              <field name="name"/>
              <field name="league"/>
              <field name="points"/>
            </tree>
        </field>
    </record>
  -->
  <record id="ooddle.users_kanban" model="ir.ui.view">
    <field name="name">dm.ooddle.users.kanban</field>
    <field name="model">dm.ooddle.users</field>
    <field name="arch" type="xml">
      <kanban>
        <templates>
          <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">                                
                <div class="o_kanban_image">                                    
                  <img alt="Avatar" t-att-src="kanban_image('res.partners', 'image_medium',record.id.raw_value)"/>                                
                </div>                                
                <div class="oe_kanban_details">                                    
                  <strong class="o_kanban_record_title">                                    
                    <field name="display_name"/>                                    
                  </strong>                                
                  <div t-if="record.mobile.value">                                        
                  <t t-esc="record.mobile.value"/>                                
                  </div>                                    
                  <div t-if="record.email.value">                                        
                  <t t-esc="record.email.value"/>                                
                  </div>                                
              </div>                            
            </div>                        
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  </data>
</odoo>