<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ooddle.matches_view_tree" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.view.tree</field>
            <field name="model">dm.ooddle.matches</field>
            <field name="arch" type="xml">
                <tree string="Matches tree">
                    <field name="name"/>
                    <field name="price"/>
                    <field name="court"/>
                    <field name="time"/>
                </tree>
            </field>
        </record>

        <record id="ooddle.matches_view_form" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.form</field>
            <field name="model">dm.ooddle.matches</field>
            <field name="arch" type="xml">
                <form string="Matches Form">
                <group colspan="4" col="4">
                <field name="name"/>
                <field name="price"/>
                <field name="court"/>
                <field name="time"/>
                <field name="state" invisible = "1" />
                <field name="team_ids"/>
                </group>
                </form>
            </field>
        </record>


        <record id="ooddle.matches_kanban" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.kanban</field>
            <field name="model">dm.ooddle.matches</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state"  on_create="quick_create" quick_create_view="ooddle.teams_view_form" archivable = "false" sample= "1">
                
                <field name="state" />
                <templates>
                    <t t-name="kanban-box" >
                    <div class="oe_kanban_vignette oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                    <div class="oe_kanban_details">
                        <!-- Title and data -->
                        <h4><field name="name"/></h4>
                           Equipos: <field name="team_ids" />
                        <ul>
                            <li>Estado: <field name="state"/></li>
                            <li>Pista: <field name="court"/></li>
                            <li>Horario: <field name="time"/></li>
                        </ul>
                    </div>
                    </div>
                </t>
                </templates>
            </kanban>
            </field>
        </record>

        <record id="view_task_calendar" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.calendar</field>
            <field name="model">dm.ooddle.matches</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar date_start="time" string="Tasks" mode="month" event_limit="5"
                            hide_time="true" js_class="project_calendar" event_open_popup="true" quick_add="false">
                </calendar>
            </field>
</record>
    </data>
</odoo>