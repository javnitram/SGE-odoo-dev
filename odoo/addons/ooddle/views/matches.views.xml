<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ooddle.matches_view_tree" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.view.tree</field>
            <field name="model">dm.ooddle.matches</field>
            <field name="arch" type="xml">
                <tree string="Matches tree" 
                decoration-info="state == 'open'" 
                decoration-muted="state =='playing'"
                decoration-success="state == 'done'" 
                decoration-danger = "state == 'close'">
                    <field name="name"/>
                    <field name="price"/>
                    <field name="court"/>
                    <field name="time" widget="remaining_days"/>
                    <field name="state" 
                    decoration-info="state == 'open'" 
                    decoration-muted="state =='playing'"
                    decoration-success="state == 'done'" 
                    decoration-danger = "state == 'close'"
                    widget = "badge"/>
                </tree>
            </field>
        </record>

        <record id="ooddle.matches_view_form" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.form</field>
            <field name="model">dm.ooddle.matches</field>
            <field name="arch" type="xml">
                <form string="Matches Form">
                <group colspan="4" col="4">
                <field name="name"/>
                <field name="price"/>
                <field name="court"/>
                <field name="time"/>
                <field name="state" invisible = "1" />
                <field name="team_ids"/>
                <field name="image_team1" invisible="1"/>
                <field name="image_team2" invisible="1"/>
                </group>
                </form>
            </field>
        </record>


        <record id="ooddle.matches_kanban" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.kanban</field>
            <field name="model">dm.ooddle.matches</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state"  on_create="quick_create" quick_create_view="ooddle.matches_view_form" archivable = "false" sample= "1">
                <field name="state" />
                <field name="court"/>
                <templates>
                    <t t-name="kanban-box" >
                    <div t-attf-class="#{kanban_color(record.court.raw_value)} oe_kanban_vignette oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban"
                    style="border: 1px solid black;">
                    <div class="oe_kanban_details">
                            <h2 style="display: flex;justify-content: center;"><field name="name"/></h2>
                        <div style="display: flex;justify-content: center;">
                            <div>
                            <field name="image_team1" widget="image" width="100" height = "100" />
                            <h4 style="display: inline-flex; align-items: center;">VS</h4>
                            <field name="image_team2" widget="image" width="100" height = "100" style="display: inline;"/>
                            <div style="display: flex;justify-content: center;">
                                Schedule: <field name="time" />
                            </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </t>
                </templates>
            </kanban>
            </field>
        </record>

        <record id="ooddle.matches_calendar" model="ir.ui.view">
            <field name="name">dm.ooddle.matches.calendar</field>
            <field name="model">dm.ooddle.matches</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar date_start="time" string="Tasks" mode="month" event_limit="5"
                            hide_time="true" js_class="project_calendar" event_open_popup="true" quick_add="false" color="court">
                            <field name="name"/>
                            <field name="team_ids"/>
                            <field name="state" invisible="1" filters ="1"/>
                </calendar>
            </field>
</record>
    </data>
</odoo>