<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="ooddle.matches_view_tree" model="ir.ui.view">
        <field name="name">dm.ooddle.matches.view.tree</field>
        <field name="model">dm.ooddle.matches</field>
        <field name="arch" type="xml">
            <tree string="Matches tree">
                <field name="name"/>
                <field name="price"/>
                <field name="court"/>
                <field name="time"/>
                <field name="users_ids"/>
            </tree>
        </field>
    </record>

    <record id="ooddle.matches_view_form" model="ir.ui.view">
        <field name="name">dm.ooddle.matches.form</field>
        <field name="model">dm.ooddle.matches</field>
        <field name="arch" type="xml">
            <form string="Matches Form">
            <group colspan="4" col="4">
              <field name="name"/>
              <field name="price"/>
              <field name="court"/>
              <field name="time"/>
              <field name="users_ids"/>
            </group>
            </form>
        </field>
    </record>
    </data>
</odoo>