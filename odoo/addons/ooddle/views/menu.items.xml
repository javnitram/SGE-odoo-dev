<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


    <!--Actions-->
    <record id="ooddle_users_action_window" model="ir.actions.act_window">
          <field name="name">Users</field>
          <field name="res_model">dm.ooddle.users</field>
          <field name="view_mode">kanban,tree,form</field>
    </record>  

    <record id="ooddle_matches_action_window" model="ir.actions.act_window">
          <field name="name">Matches</field>
          <field name="res_model">dm.ooddle.matches</field>
          <field name="view_mode">kanban,tree,calendar,form</field>
    </record>  
    <record id="ooddle_courts_action_window" model="ir.actions.act_window">
          <field name="name">Courts</field>
          <field name="res_model">dm.ooddle.courts</field>
          <field name="view_mode">tree,form</field>
    </record>    

    <record id="ooddle_teams_action_window" model="ir.actions.act_window">
          <field name="name">Teams</field>
          <field name="res_model">dm.ooddle.teams</field>
          <field name="view_mode">tree,form</field>
    </record>  
  <!--Menu Items-->
    <menuitem
      id="ooddle_menu_root"
      name="Ooddle"
      sequence="10"/>

      <menuitem
            id="ooddle_matches_courts_menu"
            name="Matches and Courts"
            parent="ooddle_menu_root"
            sequence="10"/>

    <menuitem
        id="ooddle_users_menu"
        name="Users"
        action="ooddle_users_action_window"
        parent="ooddle_menu_root"
        sequence="10"/>

    <menuitem
        id="ooddle_matches_menu"
        name="Matches"
        action="ooddle_matches_action_window"
        parent="ooddle_matches_courts_menu"
        sequence="10"/>

    <menuitem
        id="ooddle_courts_menu"
        name="Courts"
        action="ooddle_courts_action_window"
        parent="ooddle_matches_courts_menu"
        sequence="10"/>  

    <menuitem
        id="ooddle_teams_menu"
        name="Teams"
        action="ooddle_teams_action_window"
        parent="ooddle_menu_root"
        sequence="10"/>
        
  </data>
</odoo>
