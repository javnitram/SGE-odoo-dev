<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


    <!--Actions-->
    <record id="ooddle_users_action_window" model="ir.actions.act_window">
          <field name="name">Usuarios</field>
          <field name="res_model">dm.ooddle.users</field>
          <field name="view_mode">kanban,tree,form</field>
    </record>  

       <record id="ooddle_matches_action_window" model="ir.actions.act_window">
          <field name="name">Partidos</field>
          <field name="res_model">dm.ooddle.matches</field>
          <field name="view_mode">tree</field>
    </record>  
    <menuitem
      id="ooddle_menu_root"
      name="Ooddle"
      sequence="10"/>

    <menuitem
        id="ooddle_users_tree_menu"
        name="Users"
        action="ooddle_users_action_window"
        parent="ooddle_menu_root"
        sequence="10"/>

    <menuitem
        id="ooddle_matches_tree_menu"
        name="Matches"
        action="ooddle_matches_action_window"
        parent="ooddle_menu_root"
        sequence="10"/>
  </data>
</odoo>
