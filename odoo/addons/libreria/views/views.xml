    <!-- Top menu item -->
    <menuitem name="Librería" id="jm.libreria.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Categoría" id="jm.libreria.menu_categoria" parent="jm.libreria.menu_root"/>

    <!-- actions -->
    <menuitem name="Lista" id="jm.libreria.categoria.menu_lista" parent="jm.libreria.menu_categoria"
              action="jm.libreria.categoria.action_window"/>

  </data>
</odoo>