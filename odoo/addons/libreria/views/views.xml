<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="libreria.categoria_list">
      <field name="name">libreria list</field>
      <field name="model">jm.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Listado de categorías</field>
      <field name="res_model">jm.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Librería" id="libreria.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Categoría" id="libreria.menu_categoria" parent="libreria.menu_root"/>
    <menuitem name="Libros" id="libreria.menu_libros" parent="libreria.menu_root"/>
    <menuitem name="Autores" id="libreria.menu_autores" parent="libreria.menu_root"/>

    <!-- actions -->
    <menuitem name="Lista" id="libreria.categoria_menu_lista" parent="libreria.menu_categoria"
              action="libreria.categoria_action_window"/>

  </data>
</odoo>