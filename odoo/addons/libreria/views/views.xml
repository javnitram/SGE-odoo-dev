<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="jm.libreria.categoria.list">
      <field name="name">libreria list</field>
      <field name="model">jm.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="jm.libreria.categoria.action_window">
      <field name="name">libreria window</field>
      <field name="res_model">jm.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
