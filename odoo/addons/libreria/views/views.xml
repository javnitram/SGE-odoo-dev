    <!-- Top menu item -->

    <menuitem name="libreria" id="libreria.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Categoria" id="libreria.categoria" parent="libreria.menu_root"/>
    <menuitem name="Libro" id="libreria.libro" parent="libreria.menu_root"/>

    <!-- actions -->
 
    <menuitem name = "Lista Categoria" id="libreria.menu_1_list" parent="libreria.categoria"
              action="libreria.categoria_action_window"/>

