      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Libreria" id="libreria.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Categoria" id="libreria.categoria" parent="libreria.menu_root"/>
    <menuitem name="Libro" id="libreria.libro" parent="libreria.menu_root"/>

    <!-- actions -->
 
    <menuitem name = "Lista Categoria" id="libreria.menu_1_list" parent="libreria.categoria"
              action="libreria.categoria_action_window"/>

    <menuitem name = "Lista Libros" id="libreria.menu_2_list" parent="libreria.categoria"
            action="libreria.libro_action_window"/>

    <menuitem name = "Lista Autor" id="libreria.menu_3_list" parent="libreria.categoria"
            action="libreria.autor_action_window"/>

    <menuitem name = "Lista Editorial" id="libreria.menu_4_list" parent="libreria.categoria"
            action="libreria.editorial_action_window"/>


