<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="libreria.categoria_list">
      <field name="name">Categorías</field>
      <field name="model">jm.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.libro_list">
      <field name="name">Libros</field>
      <field name="model">jm.libreria.libro</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="estado"/>
          <field name="categoria_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.libro_form">
      <field name="name">Libros</field>
      <field name="model">jm.libreria.libro</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="precio"/>
            <field name="estado"/>
            <field name="segunda_mano"/>
            <field name="categoria_id"/>
            <field name="autores_ids">
              <tree>
                <field name="name"/>
              </tree>
            </field>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.autor_list">
      <field name="name">Libros</field>
      <field name="model">jm.libreria.autor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fec_nacimiento"/>
          <field name="pais_id"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Categorías</field>
      <field name="res_model">jm.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="libreria.libro_action_window">
      <field name="name">Libros</field>
      <field name="res_model">jm.libreria.libro</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="libreria.autor_action_window">
      <field name="name">Autores</field>
      <field name="res_model">jm.libreria.autor</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Librería" id="libreria.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Categoría" id="libreria.menu_categoria" parent="libreria.menu_root"/>
    <menuitem name="Libros" id="libreria.menu_libros" parent="libreria.menu_root"/>
    <menuitem name="Autores" id="libreria.menu_autores" parent="libreria.menu_root"/>

    <!-- actions -->
    <menuitem name="Categorías" id="libreria.categoria_menu_lista_categorias" parent="libreria.menu_categoria"
              action="libreria.categoria_action_window"/>
    <menuitem name="Libros" id="libreria.categoria_menu_lista_libros" parent="libreria.menu_libros"
              action="libreria.libro_action_window"/>
    <menuitem name="Autores" id="libreria.categoria_menu_lista_autores" parent="libreria.menu_autores"
              action="libreria.autor_action_window"/>

  </data>
</odoo>