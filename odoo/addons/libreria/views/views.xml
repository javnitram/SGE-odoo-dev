<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="libreria.list">
      <field name="name">Lista Categoria</field>
      <field name="model">ar.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Categoria window</field>
      <field name="res_model">ar.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
