<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- NOTA: en los ids solo puede haber un punto y debe ser después del nombre del módulo, no funciona con nada más!! -->


    <record model="ir.ui.view" id="libreria.categoria_list">
      <field name="name">Lista de categorías</field>
      <field name="model">sa.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="name"/>
          <field name="descripcion"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Categoria window</field>
      <field name="res_model">sa.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Librería" id="libreria.menu_root"/> <!-- Al no especificar elemento padre, se convierte en el elemento Top -->

    <!-- menu categories -->

    <menuitem name="Categoría" id="libreria.categoria" parent="libreria.menu_root"/>
    <menuitem name="Libro" id="libreria.libro" parent="libreria.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="libreria_menu_1_list" parent="libreria.categoria"
              action="libreria.categoria_action_window"/>

  </data>
</odoo>