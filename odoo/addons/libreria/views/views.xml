<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="libreria.list">
      <field name="name">Lista Categoria</field>
      <field name="model">ar.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="precio" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.libro_list">
      <field name="name">Lista Libro</field>
      <field name="model">ar.libreria.libro</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio" />
          <field name="ejemplares" />
          <field name="fecha" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.autor_list">
      <field name="name">Lista Autor</field>
      <field name="model">ar.libreria.autor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="libreria.editorial_list">
      <field name="name">Lista Editorial</field>
      <field name="model">ar.libreria.editorial</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fundacion"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Categoria Libros</field>
      <field name="res_model">ar.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="libreria.libro_action_window">
      <field name="name">libro Libros</field>
      <field name="res_model">ar.libreria.libro</field>
      <field name="view_mode">tree,form</field>
    </record>



    <record model="ir.actions.act_window" id="libreria.autor_action_window">
      <field name="name">Autor Libros</field>
      <field name="res_model">ar.libreria.autor</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="libreria.editorial_action_window">
      <field name="name">Editorial Libros</field>
      <field name="res_model">ar.libreria.editorial</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
<!--
    <record model="ir.actions.server" id="libreria.action_server">
      <field name="name">libreria server</field>
      <field name="model_id" ref="model_libreria_libreria"/>
