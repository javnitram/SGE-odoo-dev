<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="libreria.categoria_list">
      <field name="name">Lista de categorías</field>
      <field name="model">jm.libreria.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="libreria.categoria_action_window">
      <field name="name">Lista de categoría</field>
      <field name="res_model">jm.libreria.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Librería" id="libreria.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Categoría" id="libreria.categoria" parent="libreria.menu_root"/>
    <menuitem name="Libro" id="libreria.libro" parent="libreria.menu_root"/>

    <!-- actions -->
    <menuitem name="Listar Categorías" id="libreria.menu_1_list" parent="libreria.categoria"
              action="libreria.categoria_action_window"/>

  </data>
</odoo>