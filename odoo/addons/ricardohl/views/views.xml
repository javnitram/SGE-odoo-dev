      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="rh.ricardohl" id="ricardohl.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Producto" id="ricardohl.producto" parent="ricardohl.menu_root"/>
    <menuitem name="Cliente" id="ricardohl.cliente" parent="ricardohl.menu_root"/>
    <menuitem name="Animal" id="ricardohl.animal" parent="ricardohl.menu_root"/>
    <menuitem name="Vegetal" id="ricardohl.vegetal" parent="ricardohl.menu_root"/>

    <!-- actions -->

    <menuitem name="Listar Productoss" id="ricardohl.productos_list" parent="ricardohl.producto"
              action="ricardohl.action_window"/>
<!--<menuitem name="Server to list" id="ricardohl" parent="ricardohl.menu_2"
              action="ricardohl.action_server"/>-->  

  </data>
</odoo>