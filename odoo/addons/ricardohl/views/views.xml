<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="ricardohl.list">
      <field name="name">ricardohl list</field>
      <field name="model">rh.producto.name</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre_producto"/>
          <field name="precio"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ricardohl.action_window">
      <field name="name">ricardohl window</field>
      <field name="res_model">rh.producto.name</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
