<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="kitchen_plato">
      <field name="name">kitchen list</field>
      <field name="model">fr.cocina.plato</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="temperatura"/>
          <field name="partida_responsable_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="kitchen_partida">
      <field name="name">kitchen list</field>
      <field name="model">fr.cocina.partida</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="integrantes"/>
          <field name="descripcion"/>
          <field name="platos_creados_ids"/>
          <field name="jefe_partida_id"/>
          <field name="cliente_servido_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="kitchen_jefe">
      <field name="name">kitchen list</field>
      <field name="model">fr.cocina.jefe</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="partida_manejada_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="kitchen_cliente">
      <field name="name">kitchen list</field>
      <field name="model">fr.cocina.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="turno"/>
          <field name="partida_implicada_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="form_kitchen_plato">
      <field name="name">kitchen form</field>
      <field name="model">fr.cocina.plato</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="imagen" widget="image" />
          </group>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="precio"/>
            <field name="temperatura"/>
            <field name="partida_responsable_id"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="form_kitchen_partida">
      <field name="name">kitchen form</field>
      <field name="model">fr.cocina.partida</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="integrantes"/>
            <field name="descripcion"/>
            <field name="platos_creados_ids"/>
            <field name="jefe_partida_id"/>
            <field name="cliente_servido_ids"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="form_kitchen_jefe">
      <field name="name">kitchen form</field>
      <field name="model">fr.cocina.jefe</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="partida_manejada_ids"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="form_kitchen_cliente">
      <field name="name">kitchen form</field>
      <field name="model">fr.cocina.cliente</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="turno"/>
            <field name="partida_implicada_ids"/>
          </group>
        </form>
      </field>
    </record>

    

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="kitchen.action_platos">
      <field name="name">Lista de platos</field>
      <field name="res_model">fr.cocina.plato</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="kitchen.action_partidas">
      <field name="name">Lista de partidas</field>
      <field name="res_model">fr.cocina.partida</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="kitchen.action_jefes">
      <field name="name">Lista de Jefes</field>
      <field name="res_model">fr.cocina.jefe</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <record model="ir.actions.act_window" id="kitchen.action_clientes">
      <field name="name">Lista de Clientes</field>
      <field name="res_model">fr.cocina.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
<!--
    <record model="ir.actions.server" id="kitchen.action_server">
      <field name="name">kitchen server</field>
      <field name="model_id" ref="model_kitchen_kitchen"/>
