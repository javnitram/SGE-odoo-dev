      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    
    <menuitem name="Cocina" id="kitchen.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Platos" id="kitchen.plato_menu" parent="kitchen.menu_root"/>
    <menuitem name="Partidas" id="kitchen.partida_menu" parent="kitchen.menu_root"/>
    <menuitem name="Jefes" id="kitchen.jefe_menu" parent="kitchen.menu_root"/>
    <menuitem name="Clientes" id="kitchen.cliente_menu" parent="kitchen.menu_root"/>

    <!-- actions -->

    <menuitem name="Platos" id="kitchen.lista_platos" parent="kitchen.plato_menu"
              action="kitchen.action_platos"/>
    <menuitem name="Partidas" id="kitchen.lista_partida" parent="kitchen.partida_menu"
              action="kitchen.action_partidas"/>
    <menuitem name="Jefes" id="kitchen.lista_jefe" parent="kitchen.jefe_menu"
              action="kitchen.action_jefes"/>
    <menuitem name="Clientes" id="kitchen.lista_cliente" parent="kitchen.cliente_menu"
              action="kitchen.action_clientes"/>

  </data>
</odoo>