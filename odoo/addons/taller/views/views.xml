<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="taller.vehiculos">
      <field name="name">taller.list</field>
      <field name="model">ig.taller.vehiculos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="matricula"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="taller.action_window">
      <field name="name">taller window</field>
      <field name="res_model">ig.taller.vehiculos</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
