<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="game_shop.tienda_list">
      <field name="name"> Tienda videojuegos</field>
      <field name="model">game_shop.tienda</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="game_shop.tienda_action_window">
      <field name="name">Tienda</field>
      <field name="res_model">game_shop.tienda</field>
      <field name="view_mode">tree,form</field>
    </record>


