    <!-- Top menu item -->
<!--Elemento de menu, con id interno. Este id sera usado en los submenus como padre-->
    <menuitem name="TiendaInstrumentos" id="musica.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Categoria" id="musica_menu_1" parent="musica.menu_root"/>
    <menuitem name="Instrumento" id="musica_menu_2" parent="musica.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="musica.menu_1_list" parent="musica_menu_1"
              action="musica.categoria_action_window"/>
