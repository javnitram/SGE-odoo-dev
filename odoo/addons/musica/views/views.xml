<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="musica.categoria_tree">
      <field name="name">musica.categoria.tree</field>
      <field name="model">jr.tiendainstrumento.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name = "instrumento_id"/>
                           
          
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="musica.categoria_form">
      <field name="name">musica.categoria.form</field>
      <field name="model">jr.tiendainstrumento.categoria</field>
      <field name="arch" type="xml">
        <form>
           <group>
              <field name="name"/>
              <field name = "instrumento_id">
              <tree>
                <field name = "marca"/>
                <field name = "name"/>
                <field name = "precio"/>
                <field name = "stock"/>
                <field name = "segundamano"/>
                <field name = "estado"/>

              </tree>
              </field>
           </group>               
          
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="musica.categoria_action_window">
      <field name="name">Lista de categorias </field>
      <field name="res_model">jr.tiendainstrumento.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

  <!-- ***************************************************** -->
  <!-- id = nombre del modulo. y algo identificativo-->

  <record model="ir.ui.view" id="musica.instrumento_tree">
      <field name="name">Lista de instrumentos</field>
      <field name="model">jr.tiendainstrumento.instrumento</field>
      <field name="arch" type="xml">
        <tree>
            <field name = "categoria_id"/>
            <field name = "marca"/>
            <field name = "name"/>
            <field name = "precio"/>
            <field name = "stock"/>
            <field name = "segundamano"/>
            <field name = "estado"/>
            
            
          
       </tree>
      </field>
    </record>


  <record model="ir.ui.view" id="musica.instrumento_form">
      <field name="name">Lista de instrumentos</field>
      <field name="model">jr.tiendainstrumento.instrumento</field>
      <field name="arch" type="xml">
        <form>
        <group>
            <field name = "imagen" widget = "image" class = "oe_avatar oe_left" options="{'size':[165,200]}"/>
            <field name = "categoria_id"/>
            <field name = "marca"/>
            <field name = "name"/>
            <field name = "precio"/>
            <field name = "stock"/>
            <field name = "segundamano"/>
            <field name = "estado"/>
            <field name = "ventas_ids" colspan = "8"/>
         </group>   
            
          
       </form>
      </field>
    </record>
    
    <record model="ir.ui.view" id="musica.instrumento_kanban">
      <field name="name">Lista de instrumentos</field>
      <field name="model">jr.tiendainstrumento.instrumento</field>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
     
        <kanban>

        <!-- nombre del campo del modelo-->
          
        <field name="marca"/>
        <field name="name"/>
        <field name="precio"/>
        <field name='id'/>
        <field name="stock"/>
        <field name="imagen"/>
        <field name="estado"/>
        
        <templates>
          <t t-name="kanban-box">
          
              <div class="oe_kanban_global_click">
              <!--error aqui-->
                  <div class = "o_kanban_image">
                   
                   <img t-att-src="kanban_image('jr.tiendainstrumento.instrumento','imagen',record.id.raw_value)"/>
                  
                  </div>
                    <div class="oe_kanban_details">
                      <!-- Title and data -->
                      <h4><field name="marca"/></h4>
                     
                      <ul>
                        <li>Modelo: <field name="name"/></li>
                        <li>Precio: <field name="precio"/> €</li>
                        <li>Stock: <field name="stock"/> u</li>
                        <li><field name = "estado"/></li>
                      </ul>
                    </div>
                  
              </div>
            </t>
                   

          </templates>
          
        </kanban>
        
      </field>
    </record>


    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="musica.instrumento_action_window">
      <field name="name">Lista de instrumentos</field>
      <field name="res_model">jr.tiendainstrumento.instrumento</field>
      <!-- una accion cuando pongas tree o form, te permite que esté el boton arriba para crear el tree-->
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="musica.instrumento_kanban_action_window">
      <field name="name">Lista de instrumentos kanban</field>
      <field name="res_model">jr.tiendainstrumento.instrumento</field>
      <!-- una accion cuando pongas tree o form, te permite que esté el boton arriba para crear el tree-->
      <field name="view_mode">kanban,tree,form</field>
    </record>

    
    <!--*************************-->

    <record model="ir.ui.view" id="musica.venta_tree">
      <field name="name">Lista de ventas</field>
      <field name="model">jr.tiendainstrumento.venta</field>
      <field name="arch" type="xml">
        <tree>
        <!-- nombre del campo del modelo-->
        
          
          <field name = "cliente_id"/>
          <field name="fecha"/>
          <field name = "instrumentos_ids"/>
          </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="musica.venta_form">
      <field name="name">Lista de ventas</field>
      <field name="model">jr.tiendainstrumento.venta</field>
      <field name="arch" type="xml">
        <form>
           <group col = "4" colspan = "4">
              <field name = "cliente_id"/>
              <field name="fecha"/>
              <field name = "instrumentos_ids" colspan = "8"/>
              
              
           </group>               
          
        </form>
      </field>
    </record>





    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="musica.venta_action_window">
      <field name="name">Lista de ventas</field>
      <field name="res_model">jr.tiendainstrumento.venta</field>
      <!-- una accion cuando pongas tree o form, te permite que esté el boton arriba para crear el tree-->
      <field name="view_mode">tree,form</field>
    </record>
    <!-- server action to the one above -->





    <record model="ir.ui.view" id="musica.cliente_form">
      <field name="name">Lista de clientes</field>
      <field name="model">jr.tiendainstrumento.cliente</field>
      <field name="arch" type="xml">
        <form>
          <group colspan = "4" col = "4">
            <field name = "name"/>
            <field name = "dni"/>
            <field name = "fecha_nacimiento"/>
            <field name="phone"/>
            <field name="ventas_ids" colspan = "8"/>
          </group>
         
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="musica.cliente_tree">
      <field name="name">Lista de clientes</field>
      <field name="model">jr.tiendainstrumento.cliente</field>
      <field name="arch" type="xml">
        <tree>
            <field name = "name"/>
            <field name = "dni"/>
            <field name = "fecha_nacimiento"/>
            <field name="phone"/>
            <field name="ventas_ids"/>
       </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="musica.cliente_action_window">
      <field name="name">Lista de clientes</field>
      <field name="res_model">jr.tiendainstrumento.cliente</field>
      <!-- una accion cuando pongas tree o form, te permite que esté el boton arriba para crear el tree-->
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->
<!--Elemento de menu, con id interno. Este id sera usado en los submenus como padre-->
    <menuitem name="Instrumentos" 
              id="musica.menu_root"
              web_icon = "icon.png"
    />

    <menuitem name="Categoria"              id="musica_menu_1"    parent="musica.menu_root" action = "musica.categoria_action_window"/>
    <menuitem name="Instrumento"            id="musica_menu_2"    parent="musica.menu_root"/>
        <menuitem name="Instrumentos Kanban" id="musica_menu_2_1" parent="musica_menu_2"    action = "musica.instrumento_action_window"/>
        

    <menuitem name="Ventas"                 id="musica_menu_3"    parent="musica.menu_root" action = "musica.venta_action_window"/>
    <menuitem name="Clientes"               id="musica_menu_4"    parent="musica.menu_root"/>
        <menuitem name="Clientes"           id="musica_menu_4_1"  parent="musica_menu_4" action = "musica.cliente_action_window"/>

    <!-- actions -->

   <!-- Por cada menu item, declaras su accion-->
<!--
    <menuitem name="Server to list" id="musica" parent="musica.menu_root"
              action="musica.categoria_action_window"/>

    Puedes hacer una accion de tipo form, para acceder a un formulario directamente desde el menu 
-->
  </data>
</odoo>