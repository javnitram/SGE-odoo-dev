<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tiendainstrumento.categoria">
      <field name="name">Lista de categorias</field>
      <field name="model">jr.tiendainstrumento.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="jr.tiendainstrumento.categoria">
      <field name="name">Lista de categorias</field>
      <field name="res_model">jr.tiendainstrumento.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>


