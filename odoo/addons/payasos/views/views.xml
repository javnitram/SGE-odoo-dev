<odoo>
  <data>
    <!-- explicit list view definition-->

    <record model="ir.ui.view" id="payasos_payasos_tree">
      <field name="name">payasos.payasos.tree</field>
      <field name="model">dg.payasos.payasos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="edad"/>
          <field name="color_nariz"/>
          <field name="tarifa"/>
          <field name="manager_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_payasos_form">
      <field name="name">payasos.payasos.form</field>
      <field name="model">dg.payasos.payasos</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="edad"/>
            <field name="color_nariz"/>
            <field name="tarifa"/>
            <field name="manager_id"/>
            <field name="fiestas_ids" options="{'no_create': True}"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_fiestas_tree">
      <field name="name">payasos.fiestas.tree</field>
      <field name="model">dg.payasos.fiestas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="description"/>
          <field name="cliente_id"/>
          <field name="fecha"/>
          <field name="direccion"/>
          <field name="hora_comienzo" widget="float_time"/>
          <field name="hora_fin" widget="float_time"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_fiestas_form">
      <field name="name">payasos.fiestas.form</field>
      <field name="model">dg.payasos.fiestas</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="description"/>
            <field name="cliente_id"/>
            <field name="fecha"/>
            <field name="direccion"/>
            <field name="hora_comienzo" widget="float_time"/>
            <field name="hora_fin" widget="float_time"/>
            <field name="payasos_ids" options="{'no_create': True}"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_managers_tree">
      <field name="name">payasos.managers.tree</field>
      <field name="model">dg.payasos.managers</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="annos"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_managers_form">
      <field name="name">payasos.managers.form</field>
      <field name="model">dg.payasos.managers</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="annos"/>
            <field name="foto" widget="image" options="{'size': [125, 125]}"/>
            <field name="payasos_ids">
              <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="edad"/>
                <field name="color_nariz"/>
                <field name="tarifa"/>
              </tree>
            </field>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_clientes_tree">
      <field name="name">payasos.clientes.tree</field>
      <field name="model">dg.payasos.clientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="dni"/>
          <field name="edad"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="payasos_clientes_form">
      <field name="name">payasos.clientes.form</field>
      <field name="model">dg.payasos.clientes</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="dni"/>
            <field name="edad"/>
            <field name="fiestas_ids">
              <tree>
                <field name="description"/>
                <field name="fecha"/>
                <field name="direccion"/>
                <field name="hora_comienzo" widget="float_time"/>
                <field name="hora_fin" widget="float_time"/>
              </tree>
            </field>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record id="payasos_payasos_action_window" model="ir.actions.act_window">
      <field name="name">PAYASOS</field>
      <field name="res_model">dg.payasos.payasos</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="payasos_fiestas_action_window" model="ir.actions.act_window">
      <field name="name">FIESTAS</field>
      <field name="res_model">dg.payasos.fiestas</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="payasos_managers_action_window" model="ir.actions.act_window">
      <field name="name">MANAGERS</field>
      <field name="res_model">dg.payasos.managers</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record id="payasos_clientes_action_window" model="ir.actions.act_window">
      <field name="name">CLIENTES</field>
      <field name="res_model">dg.payasos.clientes</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
