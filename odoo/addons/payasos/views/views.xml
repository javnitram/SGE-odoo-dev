        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="PayasOS" id="payasos_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Empleados" id="payasos_empleados_menu" parent="payasos_menu_root"/>
    <menuitem name="Fiestas" id="payasos_fiestas_menu" parent="payasos_menu_root" 
              action="payasos_fiestas_action_window"/>
    <menuitem name="Clientes" id="payasos_clientes_menu" parent="payasos_menu_root"
              action="payasos_clientes_action_window"/>

    <!-- actions -->

    <menuitem name="Payasos" id="payasos_payasos_submenu" parent="payasos_empleados_menu"
              action="payasos_payasos_action_window"/>
    <menuitem name="Managers" id="payasos_managers_submenu" parent="payasos_empleados_menu"
              action="payasos_managers_action_window"/>

  </data>
</odoo>