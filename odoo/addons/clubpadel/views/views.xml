<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="clubpadel.club_list">
      <field name="name">clubpadel Club</field>
      <field name="model">clubpadel.club</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="clubpadel.marca_list">
      <field name="name">clubpadel List</field>
      <field name="model">clubpadel.marca</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="clubpadel.modelo_list">
      <field name="name">clubpadel List</field>
      <field name="model">clubpadel.modelo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="clubpadel.club_action_window">
      <field name="name">ClubPadel</field>
      <field name="res_model">clubpadel.club</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="clubpadel.marca_action_window">
      <field name="name">ClubPadel</field>
      <field name="res_model">clubpadel.marca</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="clubpadel.modelo_action_window">
      <field name="name">ClubPadel</field>
      <field name="res_model">clubpadel.modelo</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
<!--
    <record model="ir.actions.server" id="clubpadel.action_server">
      <field name="name">clubpadel server</field>
      <field name="model_id" ref="model_clubpadel_clubpadel"/>
