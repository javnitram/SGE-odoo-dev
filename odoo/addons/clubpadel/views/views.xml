<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="clubpadel.marca_list">
      <field name="name">clubpadel list</field>
      <field name="model">clubpadel.marca</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="clubpadel.action_window">
      <field name="name">clubpadel window</field>
      <field name="res_model">clubpadel.marca</field>
      <field name="view_mode">tree,form</field>
    </record>


