      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="ClubPadel" id="clubpadel.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Club" id="clubpadel.menu_club" parent="clubpadel.menu_root"/>
    <menuitem name="Marca" id="clubpadel.menu_marca" parent="clubpadel.menu_root"/>
    <menuitem name="Modelo" id="clubpadel.menu_modelo" parent="clubpadel.menu_root"/>
    
    <!-- actions -->

    <menuitem name="Lista" id="clubpadel.menu_1_list" parent="clubpadel.menu_club"
              action="clubpadel.club_action_window"/>

    <menuitem name="Lista" id="clubpadel.menu_2_list" parent="clubpadel.menu_marca"
              action="clubpadel.marca_action_window"/>
    <menuitem name="Nombre" id="clubpadel.menu_3_list" parent="clubpadel.menu_marca"
              action="clubpadel.marca_action_window"/>

    <menuitem name="Lista" id="clubpadel.menu_4_list" parent="clubpadel.menu_modelo"
              action="clubpadel.modelo_action_window"/>
  </data>

</odoo>