<odoo>
  <data>
    <!-- Top menu item -->
    <menuitem name="Floristeria" id="floristeria.menu_root" action="floristeria.hf_floristeria_flower_action_window"/>
    
    <!-- Manager -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.manager_tree">
      <field name="name">manager.view.tree</field>
      <field name="model">hf_floristeria_manager</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="bouquet_ids"/>
          <field name="flower_pot_ids"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_manager_view_form" model="ir.ui.view">
      <field name="name">hf_floristeria_manager.view.form</field>
      <field name="model">hf_floristeria_manager</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
            </group>
            <group>
              <field name="bouquet_ids"/>
              <field name="flower_pot_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_manager_action_window">
      <field name="name">Encargados</field>
      <field name="res_model">hf_floristeria_manager</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Encargados" id="floristeria.menu_manager" parent="floristeria.menu_root"
    action="floristeria.hf_floristeria_manager_action_window"/>

    <!-- Flower -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.flower_tree">
      <field name="name">flower.view.tree</field>
      <field name="model">hf_floristeria_flower</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="scientific_name"/>
          <field name="specie_id"/>
          <field name="main_color"/>
          <field name="bouquet_ids"/>
          <field name="flower_pot_ids"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_flower_view_form" model="ir.ui.view">
      <field name="name">flower.view.form</field>
      <field name="model">hf_floristeria_flower</field>
      <field name="arch" type="xml">
        <form string="Formulario Flor">
          <sheet>
            <group>
              <group>
                <field name="flower_image" widget="image"/>
              </group>  
              <group>
                <field name="name"/>
                <field name="scientific_name"/>
                <field name="specie_id"/>
                <separator/>
                <field name="main_color"/>
                <separator/>
                <field name="subgroup_gim"/>
                <field name="subgroup_ang"/>
              </group>
            </group>
            <group>
              <group>
                <field name="bouquet_ids"/>
              </group>
              <group>
                <field name="flower_pot_ids"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_flower_action_window">
      <field name="name">Flores</field>
      <field name="res_model">hf_floristeria_flower</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Specie -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.hf_floristeria_specie_tree">
      <field name="name">specie.view.tree</field>
      <field name="model">hf_floristeria_specie</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_specie_view_form" model="ir.ui.view">
      <field name="name">specie.view.form</field>
      <field name="model">hf_floristeria_specie</field>
      <field name="arch" type="xml">
        <form string="Formulario especies">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <separtator/>
              </group>
              <field name="flower_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_specie_action_window">
      <field name="name">Especies</field>
      <field name="res_model">hf_floristeria_specie</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Bouquet -->

    <record model="ir.ui.view" id="floristeria.bouquet_tree">
      <field name="name">bouquet.view.tree</field>
      <field name="model">hf_floristeria_bouquet</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="size"/>
          <field name="price"/>
          <field name="flower_ids"/>
          <field name="manager_id"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_bouquet_view_form" model="ir.ui.view">
      <field name="name">bouquet.view.form</field>
      <field name="model">hf_floristeria_bouquet</field>
      <field name="arch" type="xml">
        <form string="Formulario Ramo de Flores">
          <sheet>
            <group>
              <group>
                <field name="bouquet_image" widget="image"/>
              </group>  
              <group>
                <field name="name"/>
                <field name="size"/>
                <field name="price"/>
                <field name="manager_id"/>
              </group>
              <separator/>
              <field name="flower_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_bouquet_action_window">
      <field name="name">Ramos de flores</field>
      <field name="res_model">hf_floristeria_bouquet</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Flower Pot -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.flower_pot_tree">
      <field name="name">flower_pot.view.tree</field>
      <field name="model">hf_floristeria_flower_pot</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="size"/>
          <field name="flower_ids"/>
          <field name="manager_id"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_flower_pot_view_form" model="ir.ui.view">
      <field name="name">flower_pot.view.form</field>
      <field name="model">hf_floristeria_flower_pot</field>
      <field name="arch" type="xml">
        <form string="Formulario Macetas">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="size"/>
                <field name="manager_id"/>
              </group>
              <separator/>
              <field name="flower_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_flower_pot_action_window">
      <field name="name">Macetas</field>
      <field name="res_model">hf_floristeria_flower_pot</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- top menu items -->
    <menuitem name="Flores" id="floristeria.menu_flower" parent="floristeria.menu_root"/>
    
    <!-- flower submenu items -->
    <menuitem name="Especies" id="floristeria.menu_specie" parent="floristeria.menu_flower"
    action="floristeria.hf_floristeria_specie_action_window"/>

    <menuitem name="Flores" id="floristeria.submenu_flower" parent="floristeria.menu_flower"
    action="floristeria.hf_floristeria_flower_action_window"/>
    
    <menuitem name="Ramos de flores" id="floristeria.submenu_bouquet" parent="floristeria.menu_flower"
    action="floristeria.hf_floristeria_bouquet_action_window"/>

    <menuitem name="Macetas" id="floristeria.submenu_flower_pot" parent="floristeria.menu_flower"
    action="floristeria.hf_floristeria_flower_pot_action_window"/>

  </data>
</odoo>