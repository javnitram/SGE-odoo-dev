    <!-- Floristeria -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.floristeria_list">
      <field name="name">floristeria.view.form</field>
      <field name="model">hf_floristeria_floristeria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_floristeria_action_window">
      <field name="name">Flower window</field>
      <field name="res_model">hf_floristeria_floristeria</field>
      <field name="view_mode">tree,form</field>
    </record>

