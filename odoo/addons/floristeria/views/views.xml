<odoo>
  <data>
    <!-- Floristeria -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.floristeria_list">
      <field name="name">floristeria.view.tree</field>
      <field name="model">hf_floristeria_floristeria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_floristeria_action_window">
      <field name="name">Floristeria</field>
      <field name="res_model">hf_floristeria_floristeria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Floristeria" id="floristeria.menu_root" action="floristeria.hf_floristeria_floristeria_action_window"/>

    <!-- Flower -->

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.flower_list">
      <field name="name">flower.view.tree</field>
      <field name="model">hf_floristeria_flower</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="scientific_name"/>
          <field name="specie"/>
          <field name="main_color"/>
          <field name="group"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_flower_view_form" model="ir.ui.view">
      <field name="name">flower.view.form</field>
      <field name="model">hf_floristeria_flower</field>
      <field name="arch" type="xml">
        <form string="Formulario Flor">
          <sheet>
            <group>
              <group>
                <field name="flower_image" widget="image"/>
              </group>  
              <group>
                <field name="name"/>
                <field name="scientific_name"/>
                <field name="specie"/>
                <separator/>
                <field name="main_color"/>
                <separator/>
                <field name="group"/>
                <field name="subgroup_gim" attrs="{'invisible':[('group','=','Angiospermas')]}"/>
                <field name="subgroup_ang" attrs="{'invisible':[('group','=','Gimnospermas')]}"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_flower_action_window">
      <field name="name">Flores</field>
      <field name="res_model">hf_floristeria_flower</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- menu categories -->
    <menuitem name="Flores" id="floristeria.menu_flower" parent="floristeria.menu_root"
              action="floristeria.hf_floristeria_flower_action_window"/>
    
    <!-- Bouquet -->

    <record model="ir.ui.view" id="floristeria.bouquet_list">
      <field name="name">bouquet.view.tree</field>
      <field name="model">hf_floristeria_bouquet</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="size"/>
          <field name="price"/>
          <field name="delivery_date"/>
        </tree>
      </field>
    </record>

    <record id="hf_floristeria_bouquet_view_form" model="ir.ui.view">
      <field name="name">bouquet.view.form</field>
      <field name="model">hf_floristeria_bouquet</field>
      <field name="arch" type="xml">
        <form string="Formulario Ramo de Flores">
          <sheet>
            <group>
              <group>
                <field name="bouquet_image" widget="image"/>
              </group>  
              <group>
                <field name="name"/>
                <field name="size"/>
                <field name="price"/>
                <field name="delivery_date"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_bouquet_action_window">
      <field name="name">Ramos de flores</field>
      <field name="res_model">hf_floristeria_bouquet</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- menu categories -->
    <menuitem name="Ramos de flores" id="floristeria.menu_bouquet" parent="floristeria.menu_root"
              action="floristeria.hf_floristeria_bouquet_action_window"/>

  </data>
</odoo>