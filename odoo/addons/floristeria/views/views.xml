<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="floristeria.flower_list">
      <field name="name">Floristeria.vista</field>
      <field name="model">hf_floristeria_flower</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="floristeria.hf_floristeria_flower_action_window">
      <field name="name">Floristeria window</field>
      <field name="res_model">floristeria.floristeria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="floristeria.hf_floristeria_flower_action_server">
      <field name="name">Floristeria server</field>
      <field name="model_id" ref="model_hf_floristeria_flower"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Floristeria" id="floristeria.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Menu 1" id="floristeria.menu_1" parent="floristeria.menu_root"/>
    <!-- <menuitem name="Menu 2" id="floristeria.menu_2" parent="floristeria.menu_root"/> -->
    
    <!-- actions -->
    <menuitem name="List" id="floristeria.menu_1_list" parent="floristeria.menu_1"
              action="floristeria.hf_floristeria_flower_action_window"/>
    <!-- <menuitem name="Server to list" id="floristeria" parent="floristeria.menu_2"
              action="floristeria.action_server"/> -->

  </data>
</odoo>