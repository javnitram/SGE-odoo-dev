    <!-- Bouquet -->

    <record id="bouquet_view_form" model="ir.ui.view">
      <field name="name">bouquet.view.form</field>
      <field name="model">hf_floristeria_bouquet</field>
      <field name="arch" type="xml">
        <form string="Ramo de flores">
          <sheet>
            <group>
              <field name="name"/>
              <field name="size"/>
              <field name="price"/>
              <field name="delivery_date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

