<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="yf_artista_list">
      <field name="name">artista.disco</field>
      <field name="model">yf.disco.artista</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="anhofundacion"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="yf_artista_form">
      <field name="name">artista.disco</field>
      <field name="model">yf.disco.artista</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="anhofundacion"/>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="modulo_intento.action_window3">
      <field name="name">Artista</field>
      <field name="res_model">yf.disco.artista</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="modulo_intento.action_window7">
      <field name="name">Artista</field>
      <field name="res_model">yf.disco.artista</field>
      <field name="view_mode">form</field>
    </record>

    <!-- Top menu item -->

    <!-- menu categories -->

    <menuitem name="Artista" id="modulo_intento.menu_3" parent="modulo_intento.menu_root"/>

    <!-- actions -->

    <menuitem name="Tree" id="modulo_intento.menu_8_list" parent="modulo_intento.menu_3"
              action="modulo_intento.action_window3"/>
    <menuitem name="Form" id="modulo_intento.menu_9_list" parent="modulo_intento.menu_3"
              action="modulo_intento.action_window7"/>
  </data>
</odoo>