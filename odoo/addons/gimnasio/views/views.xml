<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gimnasio.list">
      <field name="name">Lista Clientes gym</field>
      <field name="model">ar.gimnasio.clientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="dni"/>
          <field name="name"/>
          <field name="activo"/>
          <field name="telefono"/>
          <field name="clases_ids"/>
          <field name="inscripciones_id"/>
          <field name="productos_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gimnasio.clases_list">
      <field name="name">Lista Clases gym</field>
      <field name="model">ar.gimnasio.clases</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="monitor"/>
          <field name="clientes_ids"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gimnasio.inscripciones_list">
      <field name="name">Lista Inscripciones Gym</field>
      <field name="model">ar.gimnasio.inscripciones</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="fecha_inscripcion"/>
          <field name="precio"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="gimnasio.productos_list">
      <field name="name">Lista Productos Gym</field>
      <field name="model">ar.gimnasio.productos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="disponibilidad"/>
          <field name="descripcion"/>
        </tree>
      </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="gimnasio.clientes_view_form" model="ir.ui.view">
      <field name="name">Formulario Clientes</field>
      <field name="model">ar.gimnasio.clientes</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group colspan="2" col="2">
              <field name="dni"/>
              <field name="name"/>
              <field name="activo"/>
              <field name="telefono"/>
              <field name="clases_ids"/>
              <field name="inscripciones_id"/>
              <field name="productos_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="gimnasio.clases_view_form" model="ir.ui.view">
      <field name="name">Formulario Clases</field>
      <field name="model">ar.gimnasio.clases</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group colspan="2" col="2">
              <field name="name"/>
              <field name="precio"/>
              <field name="monitor"/>
              <field name="clientes_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="gimnasio.inscripciones_view_form" model="ir.ui.view">
      <field name="name">Formulario Inscripciones</field>
      <field name="model">ar.gimnasio.inscripciones</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group colspan="2" col="2">
              <field name="name"/>
              <field name="fecha_inscripcion"/>
              <field name="precio"/>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="gimnasio.productos_view_form" model="ir.ui.view">
      <field name="name">Formulario Productos</field>
      <field name="model">ar.gimnasio.productos</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group colspan="2" col="2">
              <field name="name"/>
              <field name="precio"/>
              <field name="disponibilidad"/>
              <field name="descripcion"/>
              <field name="imagen" widget="image" class="oe_avatar oe_left" options="{'size':[265,300]}"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gimnasio.action_window">
      <field name="name">Clientes</field>
      <field name="res_model">ar.gimnasio.clientes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gimnasio.clases_action_window">
      <field name="name">Clases</field>
      <field name="res_model">ar.gimnasio.clases</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gimnasio.inscripciones_action_window">
      <field name="name">Inscripciones</field>
      <field name="res_model">ar.gimnasio.inscripciones</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="gimnasio.productos_action_window">
      <field name="name">Productos</field>
      <field name="res_model">ar.gimnasio.productos</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Gimnasio" id="gimnasio.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Clientes" id="gimnasio.clientes" parent="gimnasio.menu_root"/>
    <menuitem name="Clases" id="gimnasio.clases" parent="gimnasio.menu_root"/>
    <menuitem name="Inscripciones" id="gimnasio.inscripciones" parent="gimnasio.menu_root"/>
    <menuitem name="Productos" id="gimnasio.productos" parent="gimnasio.menu_root"/>

    <!-- actions -->

    <menuitem name="Lista Clientes" id="gimnasio.menu_1_list" parent="gimnasio.clientes"
              action="gimnasio.action_window"/>
    <menuitem name="Clases" id="gimnasio.menu_2_list" parent="gimnasio.clases"
              action="gimnasio.clases_action_window"/>
    <menuitem name="Inscripciones" id="gimnasio.menu_3_list" parent="gimnasio.inscripciones"
              action="gimnasio.inscripciones_action_window"/>
    <menuitem name="Productos" id="gimnasio.menu_4_list" parent="gimnasio.productos"
              action="gimnasio.productos_action_window"/>                              

  </data>
</odoo>