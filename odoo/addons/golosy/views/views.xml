<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="golosy_golosinas_tree">
      <field name="name">golosy.golosinas.tree</field>
      <field name="model">wb.golosy.golosinas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="cantidad"/>
          <field name="description"/>
          <field name="camion"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_golosinas_form">
      <field name="name">golosy.golosinas.form</field>
      <field name="model">wb.golosy.golosinas</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="5" col="5">
            <field name="name"/>
            <field name="precio"/>
            <field name="cantidad"/>
            <field name="description"/>
            <field name="camion"/>
          </group>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="golosy_categoria_tree">
      <field name="name">golosy.categoria.tree</field>
      <field name="model">wb.golosy.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="tipo"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_categoria_form">
      <field name="name">golosy.categoria.form</field>
      <field name="model">wb.golosy.categoria</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="tipo"/>
          </group>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="golosy_camion_tree">
      <field name="name">golosy.camion.tree</field>
      <field name="model">wb.golosy.camion</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="productos"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_camion_form">
      <field name="name">golosy.camion.form</field>
      <field name="model">wb.golosy.camion</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="productos"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_empleados_tree">
      <field name="name">golosy.empleados.tree</field>
      <field name="model">wb.golosy.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="dni"/>
          <field name="telefono"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_empleados_form">
      <field name="name">golosy.empleados.form</field>
      <field name="model">wb.golosy.empleados</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="4" col="4">
            <field name="name"/>
            <field name="dni"/>
            <field name="telefono"/>
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="golosy_golosinas_action_window">
      <field name="name">Golosinas</field>
      <field name="res_model">wb.golosy.golosinas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="golosy_categoria_action_window">
      <field name="name">Categoria</field>
      <field name="res_model">wb.golosy.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="golosy_camion_action_window">
      <field name="name">Camion</field>
      <field name="res_model">wb.golosy.camion</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="golosy_empleados_action_window">
      <field name="name">Empleados</field>
      <field name="res_model">wb.golosy.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>


