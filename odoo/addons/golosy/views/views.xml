<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="golosy_golosinas_tree">
      <field name="name">golosy.golosinas.tree</field>
      <field name="model">wb.golosy.golosinas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="precio"/>
          <field name="cantidad"/>
          <field name="active"/>
          <field name="imagen" widget='image' options="{'size':[60,60]}"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_golosinas_form">
      <field name="name">golosy.golosinas.form</field>
      <field name="model">wb.golosy.golosinas</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name" />
                <field name="precio"/>
                <field name="cantidad"/>
                <field name="description"/>
                <field name="active"/>
              </group>
              <group >
                <field name="imagen" widget='image' class='oe_avatar'/>
                <field name="categoria_id"/>
              </group>
              
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="golosy_categoria_tree">
      <field name="name">golosy.categoria.tree</field>
      <field name="model">wb.golosy.categoria</field>
      <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="tipo"/>
          </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_categoria_form">
      <field name="name">golosy.categoria.form</field>
      <field name="model">wb.golosy.categoria</field>
      <field name="arch" type="xml">
          <form>
            <sheet>
              <group>
                <group>
                  <field name="name"/>
                  <field name="tipo"/>
                </group>
                <group >
                  <field name="golosinas_ids">
                    <tree>
                      <field name="name"/>
                      <field name="precio"/>
                    </tree>
                  </field>
                </group>
              </group>
            </sheet>
          </form>
      </field>
    </record>


    <record model="ir.ui.view" id="golosy_camion_tree">
      <field name="name">golosy.camion.tree</field>
      <field name="model">wb.golosy.camion</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Matricula"/>
          <field name="productos"/>
          <field name="empleado_id" string="Conductor"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_camion_form">
      <field name="name">golosy.camion.form</field>
      <field name="model">wb.golosy.camion</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="productos"/>
                <field name="empleado_id"/>
              </group>
              <field name="golosinas2_ids">
                <tree>
                  <field name="name"/>
                  <field name="precio"/>
                  <field name="description"/>
                  <field name="cantidad"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_empleados_tree">
      <field name="name">golosy.empleados.tree</field>
      <field name="model">wb.golosy.empleados</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="dni"/>
          <field name="telefono"/>
          <field name="mesestrabajados"/>
          <field name="imagen" widget='image' options="{'size':[60,90]}"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_empleados_form">
      <field name="name">golosy.empleados.form</field>
      <field name="model">wb.golosy.empleados</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="imagen" widget='image' class='oe_avatar oe_right' 
              options="{'size':[200,250]}"/>
              <group>
                <field name="name"/>
                <field name="dni"/>
                <field name="telefono"/>
              </group>
              <group>
                <field name="antiguedad"/>
                <field name="mesestrabajados"/>
              </group>
              <field name="camiones_ids">
                <tree>
                  <field name="name"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

<!-- Vista de busqueda -->
    <record model="ir.ui.view" id="golosy_golosinas_search">
      <field name="name">golosy.golosinas.search</field>
      <field name="model">wb.golosy.golosinas</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Nombre golosina"/>
          <field name="categoria_id" string="Categoria"/>
          <field name="precio" string="Precio golosina"/>
          <filter name="Barato (-1€)" domain="[('precio', '&lt;=', '1')]"/>
          <filter name="Colocado" domain="[('active', '=', True)]"/>
          <filter name="En almacen" domain="[('active', '=', False)]"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_categoria_search">
      <field name="name">golosy.categoria.search</field>
      <field name="model">wb.golosy.categoria</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Nombre categoria"/>
          <filter name="Dulce" domain="[('tipo', '=', 0)]"/>
          <filter name="Salado" domain="[('tipo', '=', 1)]"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_camion_search">
      <field name="name">golosy.camion.search</field>
      <field name="model">wb.golosy.camion</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Matricula del camion"/>
          <filter name="Pedido pequeño" domain="[('productos', '&lt;=', '8')]"/>
          <filter name="Pedido grande" domain="[('productos', '&gt;=', '8')]"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="golosy_empleados_search">
      <field name="name">golosy.empleados.search</field>
      <field name="model">wb.golosy.empleados</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Nombre empleado"/>
          <field name="dni" string="DNI empleado"/>
          <!-- 
            <filter name="Recluta" domain="[('mesestrabajados', '&lt;=', '12')]"/>
          <filter name="Veterano" domain="[('mesestrabajados', '&gt;', '12')]"/>
          -->
        </search>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="golosy_golosinas_action_window">
      <field name="name">Productos</field>
      <field name="res_model">wb.golosy.golosinas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="golosy_categoria_action_window">
      <field name="name">Categoria</field>
      <field name="res_model">wb.golosy.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="golosy_camion_action_window">
      <field name="name">Envios</field>
      <field name="res_model">wb.golosy.camion</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="golosy_empleados_action_window">
      <field name="name">Empleados</field>
      <field name="res_model">wb.golosy.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Golosy" id="golosy_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Productos"
    id="golosy_golosinas_menu_1" 
    parent="golosy_menu_root"/>

    <menuitem name="Categorias"
    id="golosy_categorias_menu_2" 
    parent="golosy_menu_root"/>

    <menuitem name="Pedidos"
    id="golosy_camiones_menu_3" 
    parent="golosy_menu_root"/>

    <menuitem name="Empleados"
    id="golosy_empleados_menu_4" 
    parent="golosy_menu_root"/>
    <!-- actions -->

    <menuitem name="Lista de productos" id="golosy_lista_golosinas" parent="golosy_golosinas_menu_1"
              action="golosy_golosinas_action_window"/>

    <menuitem name="Lista de categorias" id="golosy_lista_categorias" parent="golosy_categorias_menu_2"
              action="golosy_categoria_action_window"/>

    <menuitem name="Lista de camiones" id="golosy_lista_camion" parent="golosy_camiones_menu_3"
              action="golosy_camion_action_window"/>

    <menuitem name="Lista de empleados" id="golosy_lista_empleados" parent="golosy_empleados_menu_4"
              action="golosy_empleados_action_window"/>

  </data>
</odoo>