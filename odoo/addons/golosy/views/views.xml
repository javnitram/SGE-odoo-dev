    <!-- Top menu item -->

    <menuitem name="Golosy" id="golosy_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Golosinas"
    id="golosy_golosinas_menu_1" 
    parent="golosy_menu_root"/>

    <menuitem name="Categorias"
    id="golosy_categorias_menu_2" 
    parent="golosy_menu_root"/>

    <menuitem name="Camiones"
    id="golosy_camiones_menu_3" 
    parent="golosy_menu_root"/>

    <menuitem name="Empleados"
    id="golosy_empleados_menu_4" 
    parent="golosy_menu_root"/>
    <!-- actions -->

    <menuitem name="Lista de golosinas" id="golosy_lista_golosinas" parent="golosy_golosinas_menu_1"
              action="golosy_golosinas_action_window"/>

    <menuitem name="Lista de categorias" id="golosy_lista_categorias" parent="golosy_categorias_menu_2"
              action="golosy_categoria_action_window"/>

    <menuitem name="Lista de camiones" id="golosy_lista_camion" parent="golosy_camiones_menu_3"
              action="golosy_camion_action_window"/>

    <menuitem name="Lista de empleados" id="golosy_lista_empleados" parent="golosy_empleados_menu_4"
              action="golosy_empleados_action_window"/>

