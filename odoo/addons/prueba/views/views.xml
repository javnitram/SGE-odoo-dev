<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="prueba.categoria_list">
      <field name="name">Lista de categor√≠as</field>
      <field name="model">jf.prueba.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="descripcion"/>
        </tree>
      </field>
    </record>

    <record id="prueba.categoria_form" model="ir.ui.view">
      <field name="name">Formulario de Categorias</field>
      <field name="model">jf.prueba.categoria</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group colspan="2" col="2">
              <field name="name"/>
              <field name="descripcion"></field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="prueba.libro_list">
      <field name="name">Lista de libros</field>
      <field name="model">jf.prueba.libro</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="portada" widget="image" class="oe_avatar oe_left" options="{'size': [100, 100]}"/>
          <field name="precio"/>
          <field name="ejemplares"/>
          <field name="fecha"/>
          <field name="segmano"/>
          <field name="estado"/> 
        </tree>
      </field>
    </record>

    <record id="prueba.libro_form" model="ir.ui.view">
      <field name="name">Formulario de libros</field>
      <field name="model">jf.prueba.libro</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group colspan="2" col="2">
              <field name="name"/>
              <field name="portada" widget="image" class="oe_avatar oe_left" options="{'size': [100, 100]}"/>
              <field name="precio"/>
              <field name="ejemplares"/>
              <field name="fecha"/>
              <field name="segmano"/>
              <field name="estado"/> 
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="prueba.categoria_action_window">
      <field name="name">Categoria window</field>
      <field name="res_model">jf.prueba.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="prueba.libro_action_window">
      <field name="name">Libro window</field>
      <field name="res_model">jf.prueba.libro</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Prueba" id="prueba.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Categoria" id="prueba.categoria" parent="prueba.menu_root"/>
    <menuitem name="Libro" id="prueba.libro" parent="prueba.menu_root"/>

    <!-- actions -->
    <menuitem name="Listar categorias" id="prueba.menu_1_list" parent="prueba.categoria"
              action="prueba.categoria_action_window"/>
    
    <menuitem name="Listar libros" id="prueba.menu_2_list" parent="prueba.libro"
              action="prueba.libro_action_window"/>
  </data>
</odoo>