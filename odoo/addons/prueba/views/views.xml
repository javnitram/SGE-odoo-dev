<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="jf.prueba.categoria.list">
      <field name="name">Lista de categor√≠as</field>
      <field name="model">jf.prueba.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="descripcion"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="jf.prueba.categoria.action_window">
      <field name="name">Categoria window</field>
      <field name="res_model">jf.prueba.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>

