    <!-- actions opening views on models -->
  <!-- -->
    <record model="ir.actions.act_window" id="concesionario.coches_action_window">
      <field name="name">Coches</field>
      <field name="res_model">concesionario.coches</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="concesionario.coches_annadir_action_window">
      <field name="name">Coches</field>
      <field name="res_model">concesionario.coches_annadir</field>
      <field name="view_mode">form</field>
    </record>
    <record model="ir.actions.act_window" id="concesionario.empleados_action_window">
      <field name="name">Empleados</field>
      <field name="res_model">concesionario.empleados</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="concesionario.clientes_action_window">
      <field name="name">Clientes</field>
      <field name="res_model">concesionario.clientes</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="concesionario.mecanicos_action_window">
      <field name="name">Mecanicos</field>
      <field name="res_model">concesionario.mecanicos</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->
<!-- -->
    <menuitem name="Concesionario" id="concesionario.menu_root"/>

    <!-- menu categories -->


