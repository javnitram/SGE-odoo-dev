<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="dhm_concesionario_marca_list">
      <field name="name">concesionario list</field>
      <field name="model">dhm.concesionario.marcas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="nombre"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="concesionario.action_window">
      <field name="name">Lista de marcas</field>
      <field name="res_model">dhm.concesionario.marcas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
