<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="concesionario.coches">
      <field name="name">Coches</field>
      <field name="model">concesionario.coches</field>
      <field name="arch" type="xml">
        <tree>
          <field name="matricula"></field>
          <field name="marca"></field>
          <field name="modelo"></field>
          <field name="cv"></field>
          <field name="color"></field>
          <field name="estado"></field>

        </tree>
      </field>
    </record>

    <!-- Añadir coche-->

    <record model="ir.ui.view" id="concesionario.coches_annadir">
      <field name="name">CochesAñadir</field>
      <field name="model">concesionario.coches_annadir</field>
      <field name="arch" type="xml">
        <form string="Introduzca el datos del coche">
          <sheet>
            <group>
              <field name="matricula"></field>
              <field name="marca"></field>
              <field name="modelo"></field>
              <field name="cv"></field>
              <field name="color"></field>
              <field name="estado"></field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  

    <record model="ir.ui.view" id="concesionario.clientes">
      <field name="name">Clientes</field>
      <field name="model">concesionario.clientes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"></field>
          <field name="apellidos"></field>
          <field name="direccion"></field>
          <field name="telefono"></field>
          <field name="matricula" />
        </tree>
      </field>
    </record>
<!---->
    <record model="ir.ui.view" id="concesionario.empleados">
      <field name="name">Empleados</field>
      <field name="model">concesionario.empleados</field>
