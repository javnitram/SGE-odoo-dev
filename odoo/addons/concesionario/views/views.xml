    <!-- Top menu item -->
    <menuitem name="concesionario" id="concesionario.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu" id="concesionario.menu" parent="concesionario.menu_root"/>
   
    <!-- actions -->
    <menuitem name="Lista" id="concesionario.menu_list" parent="concesionario.menu"
              action="concesionario.action_window"/>

  </data>
</odoo>