    <menuitem name="Clientes" id="concesionario.clientes_menu" parent="concesionario.menu_root" action="concesionario.clientes_action_window"/>
    <menuitem name="Mecanicos" id="concesionario.mecanicos_menu" parent="concesionario.menu_root" action="concesionario.mecanicos_action_window"/>

