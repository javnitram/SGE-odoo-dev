        <tree>
          <field name="nombre"></field>
          <field name="apellidos"></field>
          <field name="nrovendidos"></field>
          <field name="salario"></field>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="concesionario.mecanicos">
      <field name="name">Mecanicos</field>
      <field name="model">concesionario.mecanicos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre" />
          <field name="apellidos" />
        </tree>
      </field>
    </record>

    

    <!-- Vista tipo de coche, cuelga de coche y hay dos tipos vendidos, reparando, o alquilados
        Esta vista va a ser una kanban en la que el empleado gestiona los coches del concesionario
      <record model="ir.ui.view" id="concesionario.tipos">
