<odoo>
  <data>
      <record id="rebuy_view_employees_tree" model="ir.ui.view">
        <field name="name">am.rebuy.employees.view.tree</field>
        <field name="model">am.rebuy.employees</field>
        <field name="arch" type="xml">
          <tree string="">
            <field name="name"></field>
            <field name="employee_product_sold"></field>
            <field name="employee_product_bought"></field>
          </tree>
        </field>
      </record>
      <record id="rebuy_view_employees_form" model="ir.ui.view">
        <field name="name">rebuy.view.employees.form</field>
        <field name="model">am.rebuy.employees</field>
        <field name="arch" type="xml">
          <form string="">
            <sheet>
              <group colspan="2" col="2">
                <field name="name"></field>
                <field name="employee_product_sold"></field>
                <field name="employee_product_bought"></field>
              </group>
            </sheet>
          </form>
        </field>
      </record>
  </data>
</odoo>