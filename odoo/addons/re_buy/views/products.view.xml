<odoo>
    <data>
      <record id="rebuy_view_products_kanban" model="ir.ui.view">
        <field name="name">am.rebuy.products.view.kanban</field>
        <field name="model">am.rebuy.products</field>
        <field name="arch" type="xml">
            <kanban on_create="quick_create" quick_create_view="rebuy_view_client_product_form" archivable="false" sample="1">
            <!--<field name="client_product_stage"/>
            <progressbar field="client_product_state" colors='{"new" : "success", "checking" : "warning", "checked" : "success", "accepted" : "success", "refused" : "danger", "completed" : "success", "returned" : "danger"}' sum_field = "client_product_stock"/>-->
            <templates>
                <t t-name="kanban-box">
                <div class="oe_kanban_vignette oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                <field name="product_image" widget="image" width="100" height = "100"/>
                <div class="oe_kanban_details" style="Padding-left: 10px;">
                  <br></br><h4><field name="name"/></h4>
                  <field name="description"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
        </field>
      </record>
        <record id="rebuy_view_products_tree" model="ir.ui.view">
            <field name="name">am.rebuy.view.products.tree</field>
            <field name="model">am.rebuy.products</field>
            <field name="arch" type="xml">
              <tree string="Product">
                <field name="name"></field>
                <field name="description"></field>
                <field name="stock_ids"></field>
              </tree>
            </field>
          </record>
          <record id="rebuy_view_stock_tree" model="ir.ui.view">
            <field name="name">am.rebuy.view.stock.tree</field>
            <field name="model">am.rebuy.stock</field>
            <field name="arch" type="xml">
              <tree string="Product">
                <field name="product_id"></field>
                <field name="product_price"></field>
                <field name="product_stock"></field>
                <field name="product_grade"></field>
                <field name="product_employee"></field>
              </tree>
            </field>
          </record>
          <record id="rebuy_view_stock_form" model="ir.ui.view">
            <field name="name">am.rebuy.view.stock.form</field>
            <field name="model">am.rebuy.stock</field>
            <field name="arch" type="xml">
              <form string="Products form">
                <sheet>
                  <group colspan="2" col="2">
                  <field name="product_price"></field>
                  <field name="product_stock"></field>
                  <field name="product_grade"></field>
                  <field name="product_employee"></field>
                </group>
              </sheet>
            </form>
            </field>
          </record>
          <record id="rebuy_view_products_form" model="ir.ui.view">
            <field name="name">am.rebuy.view.products.form</field>
            <field name="model">am.rebuy.products</field>
            <field name="arch" type="xml">
              <form string="Products form">
                <sheet>
                  <group colspan="2" col="2">
                    <field name="name"></field>
                    <field name="product_image"></field>
                    <field name="description"></field>
                    <field name="stock_ids"></field>
                </group>
              </sheet>
            </form>
          </field>
        </record>
    </data>
</odoo>