<odoo>
    <data>
      <record id="rebuy_view_products_kanban" model="ir.ui.view">
        <field name="name">am.rebuy.products.view.kanban</field>
        <field name="model">am.rebuy.products</field>
        <field name="arch" type="xml">
            <kanban on_create="quick_create" quick_create_view="rebuy_view_client_product_form" archivable="false" sample="1">
            <templates>
                <t t-name="kanban-box">
                <div class="oe_kanban_vignette oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                <field name="product_image" widget="image" width="100" height = "100"/>
                <div class="oe_kanban_details" style="Padding-left: 10px;">
                  <br></br><h4><field name="name"/></h4>
                  <field name="description"/>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
        </field>
        </record>
        <record id="rebuy_view_products_tree" model="ir.ui.view">
            <field name="name">am.rebuy.view.products.tree</field>
            <field name="model">am.rebuy.products</field>
            <field name="arch" type="xml">
              <tree string="Product">
                <field name="name"></field>
                <field name="description"></field>
                <field name="stock_ids"></field>
                <field name="sold_ids"></field>
              </tree>
            </field>
          </record>
          <record id="rebuy_view_stock_tree" model="ir.ui.view">
            <field name="name">am.rebuy.view.stock.tree</field>
            <field name="model">am.rebuy.stock</field>
            <field name="arch" type="xml">
              <tree string="Product">
                <field name="product_id"></field>
                <field name="product_price"></field>
                <field name="product_stock"></field>
                <field name="product_grade"></field>
                <field name="product_reserved"></field>
              </tree>
            </field>
          </record>
          <record id="rebuy_view_stock_sold_tree" model="ir.ui.view">
            <field name="name">am.rebuy.view.stock.sold.tree</field>
            <field name="model">am.rebuy.stock_sold</field>
            <field name="arch" type="xml">
              <tree string="Product">
                <field name="product_id"></field>
                <field name="product_price"></field>
                <field name="product_stock"></field>
                <field name="product_grade"></field>
                <field name="product_employee"></field>
                <field name="product_client"></field>
                <field name="product_sold_date"></field>
              </tree>
            </field>
          </record>
          <record id="rebuy_view_stock_form" model="ir.ui.view">
            <field name="name">am.rebuy.view.stock.form</field>
            <field name="model">am.rebuy.stock</field>
            <field name="arch" type="xml">
              <form string="Products form">
                <sheet>
                  <group colspan="2" col="2">
                  <field name="product_price"></field>
                  <field name="product_stock"></field>
                  <field name="product_grade"></field>
                  <field name="product_reserved"></field>
                </group>
              </sheet>
              <sheet>
                <div>To sell product please fill the following fields, refresh page after pressing the button</div><br></br>
                <group colspan="2" col="2">
                <field name="product_employee"></field>
                <field name="product_client"></field>
                <button string="Sell" name="sell_stock" type="object" class="oe_highlight"/>
              </group>
            </sheet>
            </form>
            </field>
          </record>
          <record id="rebuy_view_stock_sold_form" model="ir.ui.view">
            <field name="name">am.rebuy.view.stock.sold.form</field>
            <field name="model">am.rebuy.stock_sold</field>
            <field name="arch" type="xml">
              <form string="Products form">
                <sheet>
                  <group colspan="2" col="2">
                  <field name="product_price"></field>
                  <field name="product_stock"></field>
                  <field name="product_grade"></field>
                  <field name="product_employee"></field>
                  <field name="product_client"></field>
                  <field name="product_sold_date"></field>
                </group>
              </sheet>
              <sheet>
                <div>To return product, please refresh page after pressing the button</div><br></br>
                <group colspan="2" col="2">
                <button string="Return" name="return_stock" type="object" class="oe_highlight"/>
              </group>
            </sheet>
            </form>
            </field>
          </record>
          <record id="rebuy_view_products_form" model="ir.ui.view">
            <field name="name">am.rebuy.view.products.form</field>
            <field name="model">am.rebuy.products</field>
            <field name="arch" type="xml">
              <form string="Products form">
                <sheet>
                  <group colspan="2" col="2">
                    <field name="name"></field>
                    <field name="product_image"></field>
                    <field name="description"></field>
                    <field name="stock_ids"></field>
                    <field name="sold_ids"></field>
                </group>
              </sheet>
            </form>
          </field>
        </record>
        <record id="rebuy_view_stock_sold_graph" model="ir.ui.view">
          <field name="name">am.rebuy.view.products.sold.graph</field>
          <field name="model">am.rebuy.stock_sold</field>
          <field name="arch" type="xml">
            <graph string="Analysis" sample="1">
              <field name="product_sold_date" interval="month"/>
              <field name="product_price" type="measure"/>
            </graph>
          </field>
        </record>
    </data>
</odoo>