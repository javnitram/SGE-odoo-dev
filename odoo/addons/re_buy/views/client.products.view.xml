<odoo>
  <data>
      <record id="rebuy_view_client_products_kanban" model="ir.ui.view">
        <field name="name">am.rebuy.client_products.view.kanban</field>
        <field name="model">am.rebuy.client_products</field>
        <field name="arch" type="xml">
            <kanban default_group_by="client_product_stage" quick_create_view="rebuy_view_client_products_form">
            <field name="client_product_stage"/>
            <progressbar field="client_product_state" colors='{"new" : "success", "checking" : "warning", "checked" : "success", "accepted" : "success", "refused" : "danger", "completed" : "success", "returned" : "danger"}' sum_field = "client_product_stock"/>
            <templates>
                <t t-name="kanban-box">
                <div class="oe_kanban_vignette oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                <field name="client_product_image" widget="image" width="100" height = "100"/>
                <div class="oe_kanban_details" style="Padding-left: 10px;">
                  <h4><field name="name"/></h4>
                  â‚¬<field name="client_product_price" widget="monetary"/>
                  <br>Grade: <field name="client_product_grade"/></br>
                  <ul>
                    <br>State: <field name="client_product_state"/></br>
                    Number of products: <field name="client_product_stock"  />
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
        </field>
      </record>
      <record id="rebuy_view_client_products_form" model="ir.ui.view">
        <field name="name">am.rebuy.client_products_form.view.form</field>
        <field name="model">am.rebuy.client_products</field>
        <field name="arch" type="xml">
          <form string="Client product form">
            <sheet>
              <group colspan="2" col="2">
                <field name="name"></field>
                <field name="client_product_image"></field>
                <field name="client_product_price"></field>
                <field name="client_product_stock"></field>
                <field name="client_product_grade"></field>
                <field name="client_product_state"></field>
                <field name="client_product_stage"></field>
                <field name="client_product_client"></field>
                <field name="client_product_employee"></field>
              </group>
            </sheet>
          </form>
        </field>
      </record>
      <record id="rebuy_view_client_products_tree" model="ir.ui.view">
        <field name="name">am.rebuy.client_products.view.tree</field>
        <field name="model">am.rebuy.client_products</field>
        <field name="arch" type="xml">
          <tree string="Client Product Summary">
            <field name="name"></field>
            <field name="client_product_price"></field>
            <field name="client_product_stock"></field>
            <field name="client_product_grade"></field>
            <field name="client_product_state"></field>
            <field name="client_product_stage"></field>
            <field name="client_product_client"></field>
            <field name="client_product_employee"></field>
          </tree>
        </field>
      </record>
  </data>
</odoo>