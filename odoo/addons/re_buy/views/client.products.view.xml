<odoo>
  <data>
      <record id="rebuy_view_client_products_kanban" model="ir.ui.view">
        <field name="name">am.rebuy.client_products.view.kanban</field>
        <field name="model">am.rebuy.client_products</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="am.rebuy.stages" on_create="quick_create" quick_create_view="rebuy_view_client_product_form" archivable="false" sample="1">
            <field name="stage_id"/>
            <progressbar field="client_product_state" colors='{"Checked" : "Checking", "Accepted" : "Refused", "Proposal_accepted" : "Proporsal_refused"}'/>
            <templates>
                <t t-name="kanban-box">
                <div class="oe_kanban_vignette">
                <!-- Left side image: -->
                <div class="oe_kanban_details">
                  <h4><field name="name"/></h4>
                  <br>â‚¬<field name="client_product_price"/></br>
                  Grade: <field name="client_product_grade"/>
                  <ul>
                    <li>State: <field name="client_product_state"/></li>
                    <li>Number of products: <field name="client_product_stock"/></li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
        </field>
      </record>
      <record id="rebuy_view_client_products_form" model="ir.ui.view">
        <field name="name">am.rebuy.client_products_form.view.form</field>
        <field name="model">am.rebuy.client_products</field>
        <field name="arch" type="xml">
          <form string="Client product form">
            <sheet>
              <group colspan="2" col="2">
                <field name="name"></field>
                <field name="client_product_price"></field>
                <field name="client_product_stock"></field>
                <field name="client_product_grade"></field>
                <field name="client_product_state"></field>
                <field name="client_product_client"></field>
                <field name="client_product_employee"></field>
              </group>
            </sheet>
          </form>
        </field>
      </record>
      <record id="rebuy_view_client_products_tree" model="ir.ui.view">
        <field name="name">am.rebuy.client_products.view.tree</field>
        <field name="model">am.rebuy.client_products</field>
        <field name="arch" type="xml">
          <tree string="Client Product Summary">
            <field name="name"></field>
            <field name="client_product_price"></field>
            <field name="client_product_stock"></field>
            <field name="client_product_grade"></field>
            <field name="client_product_state"></field>
            <field name="client_product_client"></field>
            <field name="client_product_employee"></field>
          </tree>
        </field>
      </record>
  </data>
</odoo>