    <record model="ir.ui.view" id="pokemodulo.pokemon">
      <field name="name">Pokemodulo Pokemon</field>
      <field name="model">ar.pokemodulo.pokemon</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group >
              <field name="Imagen" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
              <field name="Nombre"/>
              <field name="Generacion"/>
            </group>  
            <group >
              <field name="Tipo1"/>
              <field name="Tipo2" />
            </group>
          </sheet>
        </form>
      </field>
    </record>



    <!-- actions opening views on models -->




    <record model="ir.actions.act_window" id="pokemodulo.equipo_indi_action_window">
      <field name="name">Pokemodulo Equipo Indi</field>
      <field name="res_model">ar.pokemodulo.equipoi</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="pokemodulo.equipo_doble_action_window">
      <field name="name">Pokemodulo Equipo Doble</field>
      <field name="res_model">ar.pokemodulo.equipod</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="pokemodulo.entrenadores_action_window">
      <field name="name">Pokemodulo Entrenadores</field>
      <field name="res_model">ar.pokemodulo.entrenadores</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="pokemodulo.pokemon_action_window">
      <field name="name">Pokemodulo Pokemon</field>
      <field name="res_model">ar.pokemodulo.pokemon</field>
      <field name="view_mode">tree,form</field>
    </record>


