      <field name="res_model">ar.pokemodulo.equipoi</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="pokemodulo.equipo_doble_action_window">
      <field name="name">Equipos Dobles</field>
      <field name="res_model">ar.pokemodulo.equipod</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="pokemodulo.entrenadores_action_window">
      <field name="name">Entrenadores</field>
      <field name="res_model">ar.pokemodulo.entrenadores</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="pokemodulo.pokemon_action_window">
      <field name="name">Pokemons</field>
      <field name="res_model">ar.pokemodulo.pokemon</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="pokemodulo.region_action_window">
      <field name="name">Regiones</field>
      <field name="res_model">ar.pokemodulo.region</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="pokemodulo.victorias_action_window">
      <field name="name">Victorias</field>
      <field name="res_model">ar.pokemodulo.victorias</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Pokemodulo" id="pokemodulo.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Lista Equipos" id="pokemodulo.equipo" parent="pokemodulo.menu_root"/>
    <menuitem name="Lista Equipos Individuales" id="pokemodulo.equipo_individuales" parent="pokemodulo.equipo" action="pokemodulo.equipo_indi_action_window"/>
    <menuitem name="Lista Equipos Dobles" id="pokemodulo.equipo_double" parent="pokemodulo.equipo" action="pokemodulo.equipo_doble_action_window"/>
  
  
    <menuitem name="Lista Entrenadores" id="pokemodulo.entrenadoresL" parent="pokemodulo.menu_root" action="pokemodulo.entrenadores_action_window"/>
    <menuitem name="Lista Pokemon" id="pokemodulo.pokemonL" parent="pokemodulo.menu_root" action="pokemodulo.pokemon_action_window"/>
    <menuitem name="Lista Regiones" id="pokemodulo.regionesL" parent="pokemodulo.menu_root" action="pokemodulo.region_action_window"/>
    <menuitem name="Registro Combates" id="pokemodulo.victoriasL" parent="pokemodulo.menu_root" action="pokemodulo.victorias_action_window"/>
