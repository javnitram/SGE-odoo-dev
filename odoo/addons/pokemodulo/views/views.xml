<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="pokemodulo.equiposi">
      <field name="name">Pokemodulo Equipo Individuales</field>
      <field name="model">ar.pokemodulo.equipoi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="NombreEquipo"/>
          <field name="NombreEntrenador"/>
 <!--          <field name="Poke1"/>
          <field name="Poke2" />
          <field name="Poke3"/>
          <field name="Poke4" />
          <field name="Poke5"/>
          <field name="Poke6" />-->
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="pokemodulo.equiposd">
      <field name="name">Pokemodulo Equipo Dobles</field>
      <field name="model">ar.pokemodulo.equipod</field>
      <field name="arch" type="xml">
        <tree>
          <field name="NombreEquipo"/>
          <field name="NombreEntrenador"/>
 <!--          <field name="Poke1"/>
          <field name="Poke2" />
          <field name="Poke3"/>
          <field name="Poke4" />
          <field name="Poke5"/>
          <field name="Poke6" />-->
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="pokemodulo.entrenadores">
      <field name="name">Pokemodulo Entrenadores</field>
      <field name="model">ar.pokemodulo.entrenadores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ImagenE" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
          <field name="name"/>
        </tree>
      </field>
    </record>

