<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="pokemodulo.list">
      <field name="name">Pokemodulo Equipo</field>
      <field name="model">ar.pokemodulo.equipo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="NombreEquipo"/>
          <field name="NombreEntrenador"/>
 <!--          <field name="Poke1"/>
          <field name="Poke2" />
          <field name="Poke3"/>
          <field name="Poke4" />
          <field name="Poke5"/>
          <field name="Poke6" />-->
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="pokemodulo.entrenadores">
      <field name="name">Pokemodulo Entrenadores</field>
      <field name="model">ar.pokemodulo.entrenadores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ImagenE" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
          <field name="name"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="pokemodulo.pokemon">
      <field name="name">Pokemodulo Pokemon</field>
      <field name="model">ar.pokemodulo.pokemon</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group colspan="2" col="4">
              <field name="Imagen" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
              <field name="Nombre"/>
              <field name="Generacion"/>
            </group>  
            <group colspan="2" col="2">
              <field name="Tipo1"/>
              <field name="Tipo2" />
            </group>
          </sheet>
        </form>
      </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="pokemodulo.equipo_action_window">
      <field name="name">Pokemodulo Equipo</field>
      <field name="res_model">ar.pokemodulo.equipo</field>
      <field name="view_mode">tree,form</field>
    </record>



    <record model="ir.actions.act_window" id="pokemodulo.entrenadores_action_window">
      <field name="name">Pokemodulo Entrenadores</field>
      <field name="res_model">ar.pokemodulo.entrenadores</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="pokemodulo.pokemon_action_window">
      <field name="name">Pokemodulo Pokemon</field>
      <field name="res_model">ar.pokemodulo.pokemon</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
