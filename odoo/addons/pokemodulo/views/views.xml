    <!-- Top menu item -->

    <menuitem name="Pokemodulo" id="pokemodulo.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Lista Equipos" id="pokemodulo.equipo" parent="pokemodulo.menu_root" action="pokemodulo.equipo_action_window"/>
    <menuitem name="Lista Entrenadores" id="pokemodulo.entrenadoresL" parent="pokemodulo.menu_root" action="pokemodulo.entrenadores_action_window"/>
        <menuitem name="Lista Pokemon" id="pokemodulo.pokemonL" parent="pokemodulo.menu_root" action="pokemodulo.pokemon_action_window"/>
