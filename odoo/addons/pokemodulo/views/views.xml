<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="pokemodulo.equiposi">
      <field name="name">Equipos Individuales</field>
      <field name="model">ar.pokemodulo.equipoi</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="NombreEntrenador"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="pokemodulo.equiposi_tree">
      <field name="name">Vista del Equipo Individuales</field>
      <field name="model">ar.pokemodulo.equipoi</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group >
              <field name="name" />
              <field name="NombreEntrenador"/>
              <field name="Pokemones"/>
            </group>  
          </sheet>
        </form>
      </field>
    </record>

<!--##########################################################################################-->
    <record model="ir.ui.view" id="pokemodulo.equiposd">
      <field name="name">Equipos Dobles</field>
      <field name="model">ar.pokemodulo.equipod</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="NombreEntrenador"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="pokemodulo.equiposd_tree">
      <field name="name">Vista del Equipo Dobles</field>
      <field name="model">ar.pokemodulo.equipod</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group >
              <field name="name" />
              <field name="NombreEntrenador"/>
              <field name="Pokemones"/>
            </group>  
          </sheet>
        </form>
      </field>
    </record>


<!--##########################################################################################-->
    <record model="ir.ui.view" id="pokemodulo.entrenadores_tree">
      <field name="name">Entrenadores</field>
      <field name="model">ar.pokemodulo.entrenadores</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ImagenE" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
          <field name="name"/>
          <field name="Region"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="pokemodulo.entrenadores">
      <field name="name">Vista del Entrenador</field>
      <field name="model">ar.pokemodulo.entrenadores</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group >
              <field name="ImagenE" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
              <field name="name"/>
              <field name="EquiposI"/>
              <field name="EquiposD"/>
              <field name="Region" />
            </group>  
          </sheet>
        </form>
      </field>
    </record>


<!--##########################################################################################-->
    <record model="ir.ui.view" id="pokemodulo.pokemon_tree">
      <field name="name">Pokemons</field>
      <field name="model">ar.pokemodulo.pokemon</field>
      <field name="arch" type="xml">
        <tree>
              <field name="Imagen" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
              <field name="name"/>
              <field name="Generacion"/>
              <field name="Tipo1"/>
              <field name="Tipo2" />
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="pokemodulo.pokemon">
      <field name="name">Vista del Pokemon</field>
      <field name="model">ar.pokemodulo.pokemon</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group >
              <field name="Imagen" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
              <field name="name"/>
              <field name="Generacion"/>
            </group>  
            <group >
              <field name="Tipo1"/>
              <field name="Tipo2" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

<!--##########################################################################################-->


    <record model="ir.ui.view" id="pokemodulo.region_tree">
      <field name="name">Regiones</field>
      <field name="model">ar.pokemodulo.region</field>
      <field name="arch" type="xml">
        <tree>
              <field name="Mapa" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
              <field name="name"/>
              <field name="Tamanyo"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="pokemodulo.region">
      <field name="name">Vista del Regiones</field>
      <field name="model">ar.pokemodulo.region</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group >
              <field name="Mapa" widget="image" class="oe_right oe_avatar" options="{'size':[265,300]}"  />
            </group>  
            <group >
              <field name="name"/>
              <field name="Tamanyo"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>



<!--##########################################################################################-->

    <record model="ir.ui.view" id="pokemodulo.victorias_tree">
      <field name="name">Registro de Combates</field>
      <field name="model">ar.pokemodulo.victorias</field>
      <field name="arch" type="xml">
        <tree>
          <field name="Entrenador" />
          <field name="Victorias"/>
          <field name="Derrotas"/>
          <field name="Total"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="pokemodulo.victorias">
      <field name="name">Registro de Combates</field>
      <field name="model">ar.pokemodulo.victorias</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="Entrenador" />
              <field name="Victorias"/>
              <field name="Derrotas"/>
              <field name="Total"/> 
            </group>  
          </sheet>
        </form>
      </field>
    </record>




