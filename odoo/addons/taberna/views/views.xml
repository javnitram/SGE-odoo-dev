<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="taberna_categoria_list">
      <field name="name">taberna list</field>
      <field name="model">jm.taberna.categoria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="taberna_action_window">
      <field name="name">taberna window</field>
      <field name="res_model">jm.taberna.categoria</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="taberna" id="taberna_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="taberna_menu_1" parent="taberna_menu_root"/>
    <menuitem name="Menu 2" id="taberna_menu_2" parent="taberna_menu_root"/>

    <!-- actions -->

    <menuitem name="Listar categorias" id="taberna_menu_1_list" parent="taberna_menu_1"
              action="taberna_action_window"/>

  </data>
</odoo>